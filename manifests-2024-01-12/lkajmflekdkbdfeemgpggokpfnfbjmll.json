    "default_icon": "icon.png",
    "name": "Craigslist helper - Relister",
    "default_title": "Craigslist Helper - Relister",
    "default_popup": "popup.html"
  },
 "permissions": [
  "tabs",
 "activeTab",
  "storage",
 "http://*.craigslist.org/*",
  "https://*.craigslist.org/*"
