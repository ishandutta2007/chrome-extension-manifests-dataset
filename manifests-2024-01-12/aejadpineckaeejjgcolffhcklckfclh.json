      "js": ["readability.js", "purify.min.js"]
    }
  ],
  "permissions": ["scripting", "activeTab", "storage", "webNavigation"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css",
        "font.css",
        "readability.js",
        "purify.min.js",
        "img/visual-story.png",
        "img/logo.png",
        "img/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
