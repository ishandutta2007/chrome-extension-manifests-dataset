  "manifest_version": 2,
  "minimum_chrome_version": "45.0",

  "name": "ChromeBar",
  "description": "PhoneBar Chrome Extension",
  "version": "1.4.13.0",
  "options_page": "chromebar.options.html",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "icons": {
    "16": "assets/icons/16.png",
