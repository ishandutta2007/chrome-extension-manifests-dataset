  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "assets/libs/jquery-3.3.1.min.js",
        "assets/libs/phonebar.min.js",
        "helpers.commons.js",
        "strings.en.js",
        "strings.it.js",
