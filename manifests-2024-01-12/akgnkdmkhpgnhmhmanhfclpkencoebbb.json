    },
    "content_scripts": [
        {
            "matches": [
                "https://*.atlassian.net/jira/software/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js",
