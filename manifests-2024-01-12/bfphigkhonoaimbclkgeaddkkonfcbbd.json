  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content-script.b76ba528.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extTitle__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
