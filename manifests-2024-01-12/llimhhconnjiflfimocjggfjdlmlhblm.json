{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,

  "name": "Reader Mode",

  "short_name": "Reader Mode",

  "version": "1.3.5",

  "description": "A feature-packed distraction-free web reader with dyslexia support and research tools",

  "homepage_url": "https://readermode.io",

  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },

  "permissions": [ 
    "alarms",
    "tabs", 
    "storage", 
    "webRequest",
    "webNavigation",
    "scripting", 
    "activeTab"
  ],

  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; 'unsafe-inline' 'self'"
  },

  "host_permissions": ["<all_urls>"],

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_title": "Reader Mode",
    "default_icon": "assets/images/icon.png"
  },

  "background": {
    "service_worker": "javascripts/background.js",
    "type": "module"
  },

  "web_accessible_resources": [{
    "resources": [
      "*.html",
      "assets/*",
      "javascripts/*",
      "styles/*"
    ],
    "matches": ["<all_urls>"]
  }],

  "content_scripts": [{
     "matches": ["<all_urls>"],
     "js": ["javascripts/src/redirectcheck.js"],
     "run_at": "document_start"
  }]
}

