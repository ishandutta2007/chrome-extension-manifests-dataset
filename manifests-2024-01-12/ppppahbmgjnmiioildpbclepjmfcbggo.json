"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Search Highlight",
  "description" : "Highlight the searched text",
  "version": "1.0",
  "manifest_version": 2,
  
 "permissions": [
    "<all_urls>",
    "tabs"
  ],
  
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "/icons/48.png"
  },

  "icons": {
    "16": "/icons/16.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },
  
  "background": {
    "scripts": [
      "hello.js"
    ],
 "css": ["highlight.css"]
  },
  
  "content_scripts": [
    {
"matches": [
 "<all_urls>"
]
,
      "all_frames": true,
   "css": ["highlight.css"]
    }
  ]

