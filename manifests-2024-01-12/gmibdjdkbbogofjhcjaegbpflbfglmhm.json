  "background": {
    "page": "background/index.html",
    "persistent": false
  },
  "icons": {
    "16": "assets/icon-16x16.png",
    "32": "assets/icon-32x32.png",
    "48": "assets/icon-48x48.png",
    "96": "assets/icon-96x96.png",
    "128": "assets/icon-128x128.png"
  },
  "permissions": [
    "*://*/*",
    "activeTab",
    "tabs",
    "contextMenus",
    "cookies",
    "webNavigation",
    "privacy",
    "storage"
