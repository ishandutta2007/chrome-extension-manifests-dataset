  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": [
        "./content/content.global.js"
      ]
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./content/notifications.global.js"
      ],
      "css": [
        "./assets/fonts.css"
      ]
    }
