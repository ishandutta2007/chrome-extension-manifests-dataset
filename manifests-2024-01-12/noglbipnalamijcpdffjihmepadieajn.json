      "resources": [
        "dist/gmail/style.css"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    },
    {
      "resources": [
        "dist/generate/style.css"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://www.linkedin.com/*"
      ]
    },
    {
      "resources": [
        "dist/youtubeSummary/style.css"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
