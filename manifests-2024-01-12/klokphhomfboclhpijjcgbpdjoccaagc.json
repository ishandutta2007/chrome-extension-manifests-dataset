{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "version": "3.0.8",
  "default_locale": "en",
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "bookmarks",
    "scripting",
    "favicon",
    "history"
  ],
  "host_permissions": [
    "<all_urls>",
    "chrome://*",
    "chrome://bookmarks/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.html",
        "insert.js",
        "outline.html",
        "highlight.html",
        "translate.html",
        "fl-highlights.css",
        "images/box.png",
        "images/close-red.png",
        "images/copy.png",
        "images/highlight.png",
        "images/underline.png",
        "images/note.png",
        "images/trash.png",
        "images/add-dir.png",
        "images/add-mark.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_title": "Flash Copilot 闪记"
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "settings": {
      "description": "Settings",
      "suggested_key": {
        "default": "Alt + Comma"
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-frame.js",
        "outline-frame.js",
        "highlight-frame.js",
        "translate-frame.js",
        "anno-frame.js"
      ],
      "run_at": "document_end"
    }
  ]
}
