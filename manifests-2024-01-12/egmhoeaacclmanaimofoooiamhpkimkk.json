 "manifest_version": 3,
 "name": "Scroll Capture",
 "version": "0.1.5",
 "description": "Record your websites and automate scrolling and mouse actions for your portfolio screen captures.",
 "permissions": [
  "activeTab",
  "storage",
  "tabCapture",
  "scripting",
  "offscreen"
 ],
 "background": {
  "service_worker": "background.js"
 },
 "content_scripts": [],
 "web_accessible_resources":[
  {
   "resources": [
    "*.js",
    "*.css",
    "*.html",
    "assets/fonts/*.woff",
    "assets/fonts/*.woff2",
    "assets/fonts/*.ttf",
    "assets/images/*.png"
   ],
   "matches": ["<all_urls>"]
  }
 ],
 "action": {
  "default_icon": {
   "16": "assets/images/get_started16.png",
   "32": "assets/images/get_started32.png",
   "48": "assets/images/get_started48.png",
   "128": "assets/images/get_started128.png"
  }
 },
 "icons": {
  "16": "assets/images/get_started16.png",
