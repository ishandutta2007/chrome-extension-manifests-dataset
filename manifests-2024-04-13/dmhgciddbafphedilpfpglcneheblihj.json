  "action": {
    "default_icon": {
      "16": "/resource/logo16.png",
      "32": "/resource/logo32.png",
      "48": "/resource/logo48.png",
      "128": "/resource/logo128.png"
    },
    "default_title": "Open settings"
  },
  "content_scripts": [
    {
