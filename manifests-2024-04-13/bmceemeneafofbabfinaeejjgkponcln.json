{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_extName__",
  "default_locale": "en",
  "version": "2.3.1",
  "permissions": [
    "tabs",
    "offscreen",
    "activeTab",
    "desktopCapture",
    "storage",
    "unlimitedStorage",
    "system.display",
    "system.cpu",
    "system.memory"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app.html",
        "camera",
        "size",
        "popup",
        "controls",
        "assets/*"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://localhost/*", "*://*.storybox.blog/*"],
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://*.storybox.blog/*"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "commands": {
    "pauserecording": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Pause or resume recording"
    }
  }
}
