  "name": "RTL Chat Support on YouTube",
  "version": "1.0.0",
  "description": "Change the Youtube chat layout to RTL",
  "background": {
    "persistent": false,
    "scripts": ["/assets/js/background.js"]
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
