  "name": "Reader focus",
  "version": "2.5",
  "manifest_version": 3,
  "description": "This extension allows users to focus on single sentences when reading text.",
  "icons": { "16": "text-converter-16.png",
    "48": "text-converter-48.png",
    "100": "text-converter.png"

  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
