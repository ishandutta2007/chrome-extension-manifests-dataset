{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Japan Shopping Assistant!",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Search across 5 JP markets & open items directly in Sendico™ or Buyee™ for easy purchases from Yahoo Auctions™, Mercari™, & more!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "windows",
    "storage",
    "cookies",
    "management"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "commands": {
    "openSendicoShortcut": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Open in Sendico"
    },
    "openPreviewShortcut": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Preview in Sendico"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      }
    }
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["js/ExtPay.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://auctions.yahoo.co.jp/*",
        "https://jp.mercari.com/*",
        "https://sendico.com/*",
        "https://buyee.jp/*",
        "https://item.fril.jp/*",
 "https://paypayfleamarket.yahoo.co.jp/*",
        "https://store.shopping.yahoo.co.jp/*"
      ],
      "js": ["js/ExtPay.js"]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "icons/icon16.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
