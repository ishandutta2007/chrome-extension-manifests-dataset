  "manifest_version": 3,
  "version": "2.8",
  "name": "Logify",
  "description": "Record Shopify Staff Activities",
  "permissions": ["webRequest", "tabs", "storage"],
  "host_permissions": [
    "https://*.myshopify.com/*",
    "https://admin.shopify.com/*"
  ],
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.myshopify.com/*", "https://admin.shopify.com/*"],
      "css": ["main.css"],
      "js": ["common/utilities.js", "common/config.js", "main.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo-32x32.png"],
      "matches": ["https://*.myshopify.com/*", "https://admin.shopify.com/*"]
    }
  ]
