      "default_title": "Tweet Explainer" 
    },
  
    "side_panel": {
      "default_path": "sidepanel.html" 
    },
  

    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://ko-fi.com/"
    },
  
    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*",
          "https://x.com/*"
        ],
        "js": ["content.js"]
      }
    ]
