---

{
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "chrome_url_overrides": {
      "newtab": "new-tab.html"
   },
   "content_scripts": [{
   "js": [
    "ext.js"
   ],
   "matches": [
    "http://*/*",
    "https://*/*"
   ],
   "run_at": "document_idle",
   "all_frames": false
  }
 ],
   "action": {
      "default_icon": {
         "128": "images/icons/48.png",
         "16": "images/icons/16.png",
         "32": "images/icons/32.png",
         "48": "images/icons/48.png"
      },
      "default_popup": "popup.html"
   },
   "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' https://ajax.googleapis.com;"
   },   
   "description": "This extension Allows quick conversion for any file to PDF from the task bar icon. A new tab will show a background image.",
   "icons": {
      "128": "images/icons/48.png",
      "16": "images/icons/16.png",
      "32": "images/icons/32.png",
      "48": "images/icons/48.png"
   },
   "manifest_version": 3,
   "name": "PDF Clipper",
   "permissions": [
      "background", 
      "storage"
   ],
   "host_permissions": [
      "*://*/*"
   ],
    "web_accessible_resources": [
      {
        "resources": [
          "images/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      },
      {
        "resources": [
          "css/*"
        ],
        "matches": [
         "<all_urls>"
        ]
      }
    ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.981"
}