{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Clippr - Save text and images from the web!",
    "version": "1.0.1",
    "description": "Easily save text and images from the web!",
    "icons": {
        "128": "logoSmall.png",
        "48": "logoSmall.png",
        "32": "logoSmall.png",
        "16": "logoSmall.png"
    },
    "action": {
        "default_icon": "logoSmall.png",
        "default_title": "Clippr",
        "default_popup": "popup.html"
    },

    "commands": {
        "clipTextShortcut": {
            "default": "Shift + Alt + X",
            "windows": "Shift + Alt + X",
            "mac": "Shift + Alt + X",
            "description": "Clip highlighted text easily with a shortcut."
        }
    },

    "permissions": [
        "favicon",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "activeTab",
        "downloads",
        "scripting"
    ],

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["script.js"]
        }
    ],

    "web_accessible_resources": [
        {
          "resources": ["_favicon/*"],
          "matches": ["<all_urls>"],
          "extension_ids": ["*"]
        }
    ],

    "background": {
        "service_worker": "background.js" 
    }
      
}
  