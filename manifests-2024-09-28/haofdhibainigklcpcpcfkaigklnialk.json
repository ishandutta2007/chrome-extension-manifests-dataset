{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "The social selling chrome extension for LinkedIn",
  "description": "Easily extract a list of people who engaged on a LinkedIn post in 1 click and get notifications about their activity to your inbox.",
  "version": "2.0.7",
  "background": {
    "service_worker": "dist/background.js"
  },

  "host_permissions": [
    "https://*.linkedin.com/*"
  ],

  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],

  "action": {
    "default_title": "Click to open"
  },

  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": [
        "dist/main.js",
        "dist/signals.js"
      ]
    }
  ],

  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },

  "web_accessible_resources": [{
    "resources": [
      "dist/main.js",
      "dist/utils.js",
      "dist/lkdn_api.js",
      "dist/linkedin_comments_exporter.js",
      "src/html/post_addon.html",
      "src/html/post_btn.html",
      "src/html/intro_modal.html",
      "src/css/folk.css",
      "src/css/tooltip.css",
      "src/font/UxumGrotesque-Medium.woff2",
      "src/assets/linkedinpost_illu.png",
      "src/assets/linkedinprofile_illu.png",
      "src/assets/folk_logoLarge.svg",
      "src/assets/loader.gif",
      "src/html/leads_export_modal.html"
    ],
    "matches": ["<all_urls>"]
  }]
}
