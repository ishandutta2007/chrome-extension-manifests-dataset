  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_icon": {
      "128": "/images/128x128.png"
    }
  },
  "icons": {
    "128": "/images/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/js/config-script.js",
        "/js/content-script.js",
        "/js/faq-script.js",
        "/js/profile-script.js",
        "/js/threader-script.js",
        "/js/utility-script.js",
