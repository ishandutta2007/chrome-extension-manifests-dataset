{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "DotmetricsScriptTest",
  "version": "3.8",

  "description": "Browser extension to test Dotmetrics script",

  "background": {
    "service_worker": "js/background-script.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content-script.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "webRequest",
    "storage"
  ],

  "host_permissions": [
    "*://*.dotmetrics.net/*",
    "*://*.dotmetrics.rocks/*",
    "*://*/*"
  ],

  "action": {
    "default_icon": "images/icon.png",
    "default_title": "Dotmetrics Script Test",
    "default_popup": "DotmetricsPopup.html"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "debug1-script-rule",
        "enabled": false,
        "path": "rules/debug1-script-rule.json"
      },
      {
        "id": "door-script-rule",
        "enabled": false,
        "path": "rules/door-script-rule.json"
      },
      {
        "id": "adex-script-rule",
        "enabled": false,
        "path": "rules/adex-script-rule.json"
      },
      {
        "id": "debug2-script-rule",
        "enabled": false,
        "path": "rules/debug2-script-rule.json"
      },
      {
        "id": "debug3-script-rule",
        "enabled": false,
        "path": "rules/debug3-script-rule.json"
      },
      {
        "id": "production-script-rule",
        "enabled": false,
        "path": "rules/production-script-rule.json"
      }
    ]
  },

  "web_accessible_resources": [
    {
      "resources": [
        "inject-scripts/sendMessageToExtension.js",
        "inject-scripts/sendMessageExtensionAvailable.js",
        "inject-scripts/startRequestingTimeOnPageData.js",
        "inject-scripts/injectAdex.js",
        "inject-scripts/stressTestAjax.js",
        "inject-scripts/injectAdexConfigReader.js",
        "inject-scripts/injectAdexTools.js",
        "inject-scripts/injectDotmetricsSettingsReader.js",
        "inject-scripts/ediFunctions.js",
        "rules/production-script-rule.json",
        "rules/door-script-rule.json",
        "rules/adex-script-rule.json",
        "rules/debug1-script-rule.json",
        "rules/debug2-script-rule.json",
        "rules/debug3-script-rule.json"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
