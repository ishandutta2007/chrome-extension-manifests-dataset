  "manifest_version": 2,

  "name": "Smile On For Amazon",
  "description": "Ensure that you are always accessing Amazon.com through the Smile program.",
  "version": "1.0",
  
  "permissions": [
     "tabs",
     "webNavigation",
     "storage"
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  
  "options_page": "options.html",
  
  "background": {
     "scripts": [
      "background.js"
      ]
  },
  
  "content_scripts": [
    {
      "matches": [
       "*://amazon.com/*",
       "*://*.amazon.com/*"
      ],
      "js": ["pagename.js"],
      "run_at": "document_end"
    }
  ]
