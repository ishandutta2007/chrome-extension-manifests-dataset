{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Today View",
    "description": "A tiny browser extension to manage your Things \"Today\" items.",
    "version": "1.0.0.2",
    "manifest_version": 3,
    "minimum_chrome_version": "112",
    "icons": {
        "16": "assets/icons/16x16.png",
        "48": "assets/icons/48x48.png",
        "128": "assets/icons/128x128.png"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "src/lib/helpers.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Today's tasks"
    },
    "commands": {      
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+O",
                "mac": "Alt+Shift+O"
            },
            "description": "Open today view."
        }
    }
}