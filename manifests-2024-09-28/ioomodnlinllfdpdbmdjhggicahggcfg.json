{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Background",
    "version": "1.0.1",
    "description": "A Chrome extension to set the background of ANY page",
    "permissions": ["activeTab", "storage", "webNavigation"],
    "icons": {
      "16": "src/icons/BG.png",
      "48": "src/icons/BG.png",
      "128": "src/icons/BG.png"
    },
    "permissions_justification": {
      "activeTab": "Saves the current tab's settings",
      "storage": "Store user's settings locally",
      "webNavigation": "Listen for page navigation on SPA websites"
    },
    "background": {
      "service_worker": "./src/js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/js/content.js"],
        "run_at": "document_start",
        "all_frames": true,
        "match_about_blank": true
      }
    ],
    "action": {
      "default_popup": "./src/html/popup.html",
      "default_icon": "src/icons/BG.png"
    },
    "options_page": "./src/html/options.html"
  }
  