        "scripts": [
            "js/ctxt_menu.js",
            "js/background.js"
        ],
        "persistent": false
    },

    "browser_action": {
        "default_title": "__MSG_extName__",
        "default_icon": "img/16.png",
        "default_popup": "popup.html"
    },

    "default_locale": "ru",
    "options_page": "options.html"
