{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Kagi Infinite Free Search",
  "version": "3.0.1",
  "description": "Randomly chooses a Kagi search token for each web search, bypassing the search limit.",
  "permissions": [
    "cookies", 
    "tabs",
    "storage",
    "activeTab"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "search_url": "https://arxify.es/?q={searchTerms}",
      "name": "Kagi Infinite",
      "keyword": "kagi",
      "suggest_url": "https://arxify.es/api/autosuggest?q={searchTerms}",
      "encoding": "UTF-8",
      "favicon_url": "https://arxify.es/Proyecto%20nuevo%20(2).png",
      "is_default": true
    }
  },
  "host_permissions": [
    "https://arxify.es/*"
  ],
  "background": {
    "service_worker": "random-search-engine.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["https://arxify.es/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}