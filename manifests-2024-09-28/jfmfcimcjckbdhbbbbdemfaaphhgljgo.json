  },
  "web_accessible_resources": [{
    "resources": ["/js/fps-block.js", "/js/hd-quality.js"],
    "matches": ["*://www.youtube.com/*"],
    "use_dynamic_url": true
  },
  {
    "resources": ["/js/video-player-status.js"],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }],
  "offline_enabled": true,
