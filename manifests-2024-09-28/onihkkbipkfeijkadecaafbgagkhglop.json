{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Mem0",
    "version": "1.3",
    "description": "Own your memory and preferences across any Gen AI apps like ChatGPT, Claude, Perplexity, etc & get personalized, relevant responses.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.mem0.ai/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://claude.ai/*"],
            "js": ["claude/content.js"]
        },
        {
            "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
            "js": ["chatgpt/content.js"]
        },
        {
            "matches": ["https://www.perplexity.ai/*"],
            "js": ["perplexity/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
