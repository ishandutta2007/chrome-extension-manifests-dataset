{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Word Translator",
  "version": "1.0",
  "permissions": [
      "contextMenus",
      "storage",
      "activeTab" 
  ],
  "background": {
      "service_worker": "background.js" 
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon16.png",
          "48": "images/icon48.png",
          "128": "images/icon128.png"
      }
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["js/jquery-3.5.1.slim.min.js", "js/bootstrap.min.js", "js/popper.min.js"]
  }
  ],
  "author": "Goksel Ozardali",
  "homepage_url": "https://goksel.dev",
  "description": "Word Translator is a Chrome extension that allows users to save and translate unknown words directly from the browser context menu.",
  "minimum_chrome_version": "88"
}
