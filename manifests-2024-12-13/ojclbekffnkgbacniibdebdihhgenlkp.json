      "js": ["vendor/jquery/dist/jquery.js", "dist/script.js"],
      "css": ["dist/style.css"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "manifest_version": 2,
  "options_page": "dist/options.html",
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true
  }
}
