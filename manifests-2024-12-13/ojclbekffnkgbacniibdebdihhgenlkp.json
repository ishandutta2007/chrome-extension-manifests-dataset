{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "GitHub Mention Highlighter",
  "version": "0.2.1",
  "description": "Highlight user and team mentions on GitHub",
  "permissions": [
    "https://github.com/*",
    "https://*.githubapp.com/*",
    "https://mail.google.com/*",
    "storage"
  ],
  "content_scripts": [
