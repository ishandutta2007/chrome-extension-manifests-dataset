{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Chess.com Game Reviewer",
  "description": "Automatically reviews all chess.com games for a player",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab", "tabs", "scripting"], 
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [ 
      {
          "matches": ["https://www.chess.com/*"],
          "js": ["content.js"],
          "run_at": "document_start"
      }
  ],
  "host_permissions": [
        "https://chess.com/*",
        "https://*/*"
  ],
  "icons": {
    "16": "chess16.png",
    "128": "chess128.png"
  }
}
