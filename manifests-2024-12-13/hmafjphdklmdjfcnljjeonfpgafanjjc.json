    "default_title": "Darken",
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "options_page": "options.html"
