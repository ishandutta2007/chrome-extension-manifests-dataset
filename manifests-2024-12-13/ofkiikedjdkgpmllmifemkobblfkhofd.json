{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Easy Screen Recorder",
  "author": "KaZaT",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["activeTab", "tabCapture", "desktopCapture", "tabs", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "css/*", "js/*", "html/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "file://*/*"],
      "js": ["js/libraries/jquery-3.5.1.min.js", "js/recorder.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "assets/icons/48.png"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "commands": {
    "open-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+L",
        "linux": "Alt+Shift+L",
        "mac": "Alt+Shift+L",
        "windows": "Alt+Shift+L"
      },
      "description": "Open a Recording"
    },
    "cancel-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+C",
        "linux": "Alt+Shift+C",
        "mac": "Alt+Shift+C",
        "windows": "Alt+Shift+C"
      },
      "description": "Cancel a Recording"
    },
    "restart-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+R",
        "linux": "Alt+Shift+R",
        "mac": "Alt+Shift+R",
        "windows": "Alt+Shift+R"
      },
      "description": "Restart a Recording"
    },
    "toggle-pause-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+P",
        "linux": "Alt+Shift+P",
        "mac": "Alt+Shift+P",
        "windows": "Alt+Shift+P"
      },
      "description": "Pause/Resume a Recording"
    }
  }
}
