{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Streaming Ad Muter",
  "version": "1.4",
  "description": "Automatically mutes ads on Hotstar and SonyLIV",
  "permissions": [
    "webRequest",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hotstar.com/*",
    "*://*.sonyliv.com/*",
    "*://*.akamaized.net/*",
    "*://*.cdn.hotstar.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Streaming Ad Muter",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png",
      "96": "icon.png"
    }
  },
  "content_scripts": [{
    "matches": ["*://*.hotstar.com/*", "*://*.sonyliv.com/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}
