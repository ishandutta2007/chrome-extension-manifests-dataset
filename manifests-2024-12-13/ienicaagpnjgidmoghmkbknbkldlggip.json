{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "E-Commerce Assistant",
  "description": "Enhance you e-commerce shopping and selling experience.",
  "version": "0.0.0.2",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "background.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://amazon.com/",
    "https://*.amazon.com/",
    "https://*.media-amazon.com/",
    "https://*.1688.com/"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "js": ["scripts/common.js"],
      "matches": [
        "https://*.1688.com/*"
      ],
      "run_at": "document_start"
    },{
      "js": ["scripts/common.js", "scripts/image_tool.js"],
      "matches": [
        "https://*.amazon.com/*"
      ],
      "run_at": "document_idle"
    }, {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.amazon.com/gp/new-releases/*"
      ],
      "run_at": "document_idle"
    }, {
      "js": ["scripts/content_search.js"],
      "matches": [
        "https://www.amazon.com/s?*",
        "https://www.amazon.com/s/*"
      ],
      "run_at": "document_idle"
    }
  ]
}