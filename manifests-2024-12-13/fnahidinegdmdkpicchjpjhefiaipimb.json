{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Accessibility Sidebar",
    "version": "1.0",
    "description": "Inject a styled sidebar for accessibility checks, toggled by clicking the extension icon.",
    "permissions": ["activeTab"],
    "action": {
      "default_title": "Toggle Accessibility Sidebar"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],  
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128":"icons/icon128.png"
    }
  }
  