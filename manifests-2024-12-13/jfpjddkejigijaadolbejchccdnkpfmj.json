{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Universal Streaming AdBlock",
  "version": "1.0",
  "description": "Advanced ad blocking and content skipping for major streaming services",
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.hulu.com/*",
    "*://*.disneyplus.com/*", 
    "*://*.netflix.com/*",
    "*://*.amazon.com/*",
    "*://*.primevideo.com/*",
    "*://*.crunchyroll.com/*",
    "*://*.max.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.hulu.com/*",
      "*://*.disneyplus.com/*",
      "*://*.netflix.com/*", 
      "*://*.amazon.com/*",
      "*://*.primevideo.com/*",
      "*://*.crunchyroll.com/*",
      "*://*.max.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
