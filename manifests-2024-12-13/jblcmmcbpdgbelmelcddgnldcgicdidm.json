{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Twitter/X Limiter",
    "version": "1.6",
    "icons": {
        "128": "icon/128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "options.html",
        "default_icon": {
            "128": "icon/128.png"
        }
    },
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*"
    ]
}
