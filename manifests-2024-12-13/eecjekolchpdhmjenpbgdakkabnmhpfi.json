{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "YouTube Detoxifier: Delay Shorts & Block Recommendations",
    "version": "1.2.4",
    "description": "Block YouTube Shorts addiction, Remove recommendations, comments and auto-quit YouTube",
    "permissions": [
      "tabs",
      "storage"
    ],

    "action": {
      "default_popup": "popup.html"
    },

    "host_permissions": [
      "*://*.youtube.com/*"
    ],

    "icons": {
        "16": "reading-time_images/icon-16.png",
        "32": "reading-time_images/icon-32.png",
        "48": "reading-time_images/icon-48.png",
        "128": "reading-time_images/icon-128.png"
      },

    "background": {
      "service_worker": "background.js",
      "type": "module"
    },

    "content_scripts": [
        {
          "matches": [
            "*://www.youtube.com/*"
          ],
          "js": ["content.js"]
        }
      ]


}
