{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "LangFixer",
    "version": "1.1",
    "description": "Transform text between English and Hebrew using a customizable keyboard shortcut.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "./icons/icon128.png",
        "48": "./icons/icon48.png",
        "32": "./icons/icon32.png",
        "16": "./icons/icon16.png"
        
      }
    },
    "icons": {
      "128": "./icons/icon128.png",
      "48": "./icons/icon48.png",
      "32": "./icons/icon32.png",
      "16": "./icons/icon16.png"
    },
    "permissions": ["storage", "notifications"],
    "background": {
        "service_worker": "background.js",  
        "type": "module"
    },
    "commands": {
      "toggle-transformation": {
          "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "mac": "Command+Shift+Y"
          },
          "description": "Toggle language transformation"
      }
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["node_modules/js-confetti/dist/js-confetti.min.js", "Langfixer.js"],
          "run_at": "document_end"
          
      }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
  
  
}



  