{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "MagicRecap",
  "version": "1.5",
  "description": "A simple daily assistant that summarises online articles.",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.wikipedia.org/*"
      ],
      "js": ["src/inject.js"],
      "css": ["styles/inject.css"]
    }
  ],
  "background": {
    "service_worker": "src/auth.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
