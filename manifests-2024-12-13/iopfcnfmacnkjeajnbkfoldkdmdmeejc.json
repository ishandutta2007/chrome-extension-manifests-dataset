    "manifest_version": 3,
    "name": "Shortcut - Secure and simple go links for your team",
    "description": "Organize and share your team's resources with memorable short links.",
    "version": "1.2",
    "icons": {
        "16": "icons/logo_16.png",
        "32": "icons/logo_32.png",
        "48": "icons/logo_48.png",
        "128": "icons/logo_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": [
            "https://shrtct.io/*",
            "*://shrtct.test/*"
        ]
    },
    "action": {
        "default_title": "Create go link for current tab"
    },
    "host_permissions": [
        "*://go/*"
    ],
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "activeTab"
    ],
    "declarative_net_request" : {
        "rule_resources" : [
            {
                "id": "go_redirect",
                "enabled": true,
                "path": "go_redirect_rule.json"
            }
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "shortcut@shrtct.io"
        }
    }
