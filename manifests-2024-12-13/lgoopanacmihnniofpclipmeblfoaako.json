{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "CrowdShield for Facebook Marketplace",
    "version": "0.0.1",
    "description": "Make Facebook Marketplace safer with CrowdShield, a tool for collaborative scam reporting and detection.",
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "https://www.facebook.com/*",
        "https://trinitycloud.uk/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.facebook.com/*marketplace*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "css": [
                "stylesce.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": false
    }
}
