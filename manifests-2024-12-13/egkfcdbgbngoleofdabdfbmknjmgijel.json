{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "AEM Forms shortcuts extension",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "images/aem16.png",
    "32": "images/aem32.png",
    "48": "images/aem48.png",
    "128": "images/aem128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "open-crx": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Open crx"
    },
    "open-console": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Open system console"
    },
    "toggle-editor-preview": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Toggle editor/preview mode"
    },
    "current-path-crx": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open current path in crx"
    }
  }
}