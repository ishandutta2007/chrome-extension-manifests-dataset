{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Wiki Glimpse",
  "version": "1.0",
  "description": "Search Wikipedia directly from the page and show a short extract",
  "permissions": ["activeTab", "contextMenus"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "icons": {
    "16": "images/wg16.png",
    "32": "images/wg32.png",
    "48": "images/wg48.png",
    "128": "images/wg128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/wg16.png",
      "32": "images/wg32.png",
      "48": "images/wg48.png",
      "128": "images/wg128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "author": "Rory Flint",
  "homepage_url": "https://www.roryflint.co.uk",
  "short_name": "WikiGlimpse"
