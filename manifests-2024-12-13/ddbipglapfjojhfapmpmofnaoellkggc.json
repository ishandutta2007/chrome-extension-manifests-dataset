            "all_frames": false,
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [{
        "resources": ["images/components/light/*.svg", "images/components/dark/*.svg"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
    }],

    "permissions": [
        "storage",
        "scripting"
    ],

