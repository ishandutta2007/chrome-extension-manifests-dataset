{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "LinkedIn Text Formatter",
    "version": "1.1",
    "description": "A Chrome plugin to format LinkedIn posts with bold, italic, underline styles, makes your posts stand out and readable.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/icon128.png"],
        "matches": ["https://www.linkedin.com/*"]
      }
    ]
  }