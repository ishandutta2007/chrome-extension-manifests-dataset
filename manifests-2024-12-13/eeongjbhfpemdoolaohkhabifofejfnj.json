  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "commands": {
    "change_font": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Change font"
    },
    "revert_font": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
