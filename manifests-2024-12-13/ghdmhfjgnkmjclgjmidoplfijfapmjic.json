{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "TextSnap Annotations",
  "version": "1.1",
  "description": "Browser extension that allows you to effortlessly highlight, annotate, and save your favorite text snippets from any webpage.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "25": "icons/25.png",
      "42": "icons/42.jpg",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "25": "icons/25.png",
    "42": "icons/42.jpg",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup_style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
