  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["html/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["pageWorld.js"],
      "matches": ["https://mail.google.com/*"]
