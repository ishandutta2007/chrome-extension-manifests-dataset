  "default_icon": "down-arrow.png",
  "default_title": "Click me to generate comic download links for this page.",
  "default_popup": "popup.html"
 },

 "permissions":
 [
  "tabs",
  "http://www.8comic.com/*",
  "http://www.cartoonmad.com/*",
  "http://new.comicvip.com/*",
