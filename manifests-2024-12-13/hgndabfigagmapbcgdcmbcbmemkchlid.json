{
"update_url": "https://clients2.google.com/service/update2/crx",

 "name": "8comic - link generator",
 "version": "0.2.7",
 "manifest_version": 2,
 "description": "Generate links to comic images on http://www.8comic.com/ for batch download.",

  "content_scripts": [
    {
      "matches": [
       "http://www.8comic.com/*/drawing-*", 
