{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "X-Reply | AI to reply",
    "short_name": "X-Reply",
    "version": "0.0.1",
    "description": "X-Reply is a tool help you to use AI to reply on all platform",
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "192": "/icons/icon192.png"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject/outline/*.svg",
                "inject/ai-call.js",
                "inject/utils.js",
                "inject/inject.css",
                "active-tab/index.html",
                "sidepanel/index.html",
                "*.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "inject/svg-files.js",
                "inject/icon.js",
                "inject/ai-call.js",
                "inject/utils.js",
                "inject/xReply-main-button.js",
                "inject/content-reply-popup.js",
                "inject/custom-prompt-popup.js",
                "inject/quick-prompt-popup.js",
                "inject/index.js"
            ],
            "css": [
                "inject/inject.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "active-tab/index.html",
        "default_title": "Open Chat Interface"
    },
    "options_page": "setting/ai-provider.html",
    "background": {
        "service_worker": "background.js"
    }
}