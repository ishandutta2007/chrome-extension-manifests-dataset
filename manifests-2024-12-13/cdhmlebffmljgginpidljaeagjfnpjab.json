{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Amazon Clean URL Copier",
  "version": "1.0",
  "description": "Copy Amazon product URL with ONLY product code / without title or tracking parameters.",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*",
        "*://www.amazon.co.jp/*",
        "*://www.amazon.co.uk/*",
        "*://www.amazon.de/*",
        "*://www.amazon.fr/*",
        "*://www.amazon.ca/*",
        "*://www.amazon.com.au/*",
        "*://www.amazon.it/*",
        "*://www.amazon.es/*",
        "*://www.amazon.in/*",
        "*://www.amazon.com.br/*",
        "*://www.amazon.cn/*",
        "*://www.amazon.com.mx/*",
        "*://www.amazon.nl/*",
        "*://www.amazon.se/*",
        "*://www.amazon.sg/*",
        "*://www.amazon.ae/*",
        "*://www.amazon.sa/*",
        "*://www.amazon.com.tr/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "48": "images/copy-icon.png"
  }
}