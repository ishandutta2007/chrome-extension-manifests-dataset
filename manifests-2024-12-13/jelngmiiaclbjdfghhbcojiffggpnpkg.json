{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "StepShare",
  "version": "1.2.1",
  "description": "share your steps.",
  "permissions": [
    "scripting",
    "activeTab",
    "sidePanel",
    "tabs",
    "webNavigation",
    "cookies",
    "clipboardRead"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://*.step-share.com/*"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "popup.css",
        "static/js/*.js",
        "public/loadingAnimation.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
