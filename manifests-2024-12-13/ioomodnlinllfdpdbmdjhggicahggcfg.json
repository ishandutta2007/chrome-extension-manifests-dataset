{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Background",
    "version": "1.1.0",
    "description": "A Chrome extension to set the background of ANY page",
    "permissions": ["activeTab", "storage", "webNavigation"],
    "icons": {
      "16": "src/icons/BG.png",
      "48": "src/icons/BG.png",
      "128": "src/icons/BG.png"
    },
    "permissions_justification": {
      "activeTab": "Saves the current tab's settings",
      "storage": "Store user's settings locally",
      "webNavigation": "Listen for page navigation on SPA websites"
    },
    "background": {
      "service_worker": "./src/js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./src/js/content.js"],
        "run_at": "document_start",
        "all_frames": true,
        "match_about_blank": true
      }
    ],
    "action": {
      "default_popup": "./src/html/popup.html",
      "default_icon": "src/icons/BG.png"
    },
    "options_page": "./src/html/options.html",
    "commands": {
      "opacity-up": {
        "suggested_key": {
          "default": "Ctrl+U",
          "mac": "Command+U"
        },
        "description": "Turn up opacity"
      },
      "opacity-down": {
        "suggested_key": {
          "default": "Ctrl+I",
          "mac": "Command+I"
        },
        "description": "Turn down opacity"
      },
      "z-index-up": {
        "suggested_key": {
          "default": "Ctrl+Shift+U",
          "mac": "Command+Shift+U"
        },
        "description": "Move background up"
      },
      "z-index-down": {
        "suggested_key": {
          "default": "Ctrl+Shift+I",
          "mac": "Command+Shift+I"
        },
        "description": "Move background down"
      }
    }
}
  