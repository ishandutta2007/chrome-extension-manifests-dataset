{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "BiLingo Toggle",
    "version": "1.0",
    "description": "Toggle between Hebrew and English text and switch between uppercase and lowercase with ease",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://mail.google.com/mail/u/*/#compose*"
            ],
            "all_frames": true,
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle_case": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Toggle case of selected text"
        },
        "toggle_language": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Toggle language of selected text"
        }
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}