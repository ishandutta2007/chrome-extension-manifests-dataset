{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Custom Translator",
    "version": "1.0",
    "description": "Translate specific words on a webpage to the student's language.",
    "permissions": ["storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
        "matches": ["https://spike.legoeducation.com/*"],
        "js": ["content.js"]
    }
],
 "host_permissions": [
  "https://spike.legoeducation.com/*"
  ],
 "web_accessible_resources": [
    {
        "resources": ["translations.json"],
        "matches": ["https://spike.legoeducation.com/*"]
    }
]

}
