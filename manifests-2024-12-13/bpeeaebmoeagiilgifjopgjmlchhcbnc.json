{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "GamerTrade Trade helper",
  "version": "1.4",
  "description": "Ajuda você a realizar trades peer-to-peer via GamerTrade",
  "action": {
    "default_icon": {
      "16": "assets/logo16.png",
      "48": "assets/logo48.png",
      "128": "assets/logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.steamcommunity.com/tradeoffer/new/*"],
      "js": ["highlighter.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["*://*.gamer.trade/*", "*://*.gamertrade/*"],
      "js": ["plugindetection.js"]
    }
  ],
  "host_permissions": [
    "*://*.steamcommunity.com/tradeoffer/new/*",
    "*://*.gamer.trade/*",
    "*://*.gamertrade/*"
  ],
  "icons": {
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["highlightItem.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
