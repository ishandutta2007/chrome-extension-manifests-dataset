    "https://api.openai.com/*",
    "<all_urls>"
  ],

  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },

  "update_url": "https://clients2.google.com/service/update2/crx",

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "popup.html",
        "libs/tesseract.min.js"
      ]
    }
  ],

  "commands": {
    "capture_shortcut": {
