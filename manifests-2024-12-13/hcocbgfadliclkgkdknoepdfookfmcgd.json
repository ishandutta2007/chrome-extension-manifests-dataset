{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,

  "name": "Slyce",
  "description": "The fastest bug reporting tool. Cut your bug reporting time by 50X.",
  "version": "2.1",

  "action": {
    "default_icon": {
      "128": "./icons/icon-128.png",
      "64": "./icons/icon-64.png",
      "32": "./icons/icon-32.png",
      "16": "./icons/icon-16.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "offscreen",
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "tabCapture",
    "cookies",
    "webRequest",
    "webNavigation",
    "\u003Call_urls>"
  ],
  "externally_connectable": {
    "matches": ["*://*.slyce.dev/*"]
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "requestPermission.html",
        "requestPermission.js",
        "collectionIcon.png",
        "fileIcon.png",
        "linkkIcon.png",
        "notionIcon.png",
        "githubIcon.png",
        "jiraIcon.png",
        "linearIcon.png",
        "slackIcon.png",
        "notionIcon.svg",
        "githubIcon.svg",
        "jiraIcon.svg",
        "linearIcon.svg",
        "slackIcon.svg",
        "userIcon.png",
        "workspaceIcon.png",
        "file2Icon.png",
        "spaceIcon.png",
        "azureIcon.png",
        "spacePublicIcon.png",
        "arrow-top-right.svg",
        "blur.svg",
        "eye.svg",
        "eraser.svg",
        "circle.svg",
        "cursor.svg",
        "redo-2.svg",
        "slash.svg",
        "square.svg",
        "database.svg",
        "type.svg",
        "undo-2.svg",
        "pencil.svg",
        "eye-off-icon.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "commands": {
    "record-tab": {
      "suggested_key": {
        "windows": "Alt+R",
        "mac": "MacCtrl+R",
        "default": "Alt+R"
      },
      "description": "Record Tab"
    },
    "screenshot": {
      "suggested_key": {
        "windows": "Alt+S",
        "mac": "MacCtrl+S",
        "default": "Alt+S"
      },
      "description": "Screenshot Taker"
    },
    "record-desktop": {
      "suggested_key": {
        "windows": "Alt+D",
        "mac": "MacCtrl+D",
        "default": "Alt+D"
      },
      "description": "Record Desktop"
    },
    "instant-replay": {
      "suggested_key": {
        "windows": "Alt+I",
        "mac": "MacCtrl+I",
        "default": "Alt+I"
      },
      "description": "Instant Replay"
    }
  }
