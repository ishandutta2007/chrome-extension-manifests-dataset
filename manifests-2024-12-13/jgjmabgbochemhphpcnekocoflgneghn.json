{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Simplify Calendar",
  "version": "1.3",
  "manifest_version": 3,
  "description": "Reduces Google Calendar interface to the bare minimum",
  "homepage_url": "https://simpl.fyi",

  "icons": {
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["js/util.js", "js/constants.js", "js/observers.js", "js/main.js"],
      "css": ["css/style.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["img/favicon/*"],
      "matches": ["https://calendar.google.com/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self'; script-src 'self'; img-src 'self'"
  }
}
