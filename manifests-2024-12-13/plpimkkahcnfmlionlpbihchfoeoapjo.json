{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Advanced Link Preview",
  "version": "1.4.7.1",
  "manifest_version": 3,
  "description": "Link preview with support of nested previews and address bar. Reduce the number of open tabs.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "webNavigation",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon/48.png",
    "128": "icon/128.png"
