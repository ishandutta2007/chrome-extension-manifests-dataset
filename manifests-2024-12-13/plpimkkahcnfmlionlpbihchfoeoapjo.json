  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles/lightWindow.css"
      ],
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon/48.png",
        "assets/*.svg",
        "styles/lightWindow.css",
        "proxyframe.html",
        "endFrameIdentification.html",
        "*.js.map"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
