    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
