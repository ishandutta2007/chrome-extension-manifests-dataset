{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Center Captions",
    "version": "1.0",
    "description": "A Chrome extension to center subtitles on YouTube videos.",    
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "action": {        
        "default_icon": {
            "128": "icons/icon128.png"            
        }
    },  
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },    
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
