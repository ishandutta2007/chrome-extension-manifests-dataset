{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Job Ally Chrome Extension",
    "description": "Job Ally: Boost your job search with Match Score, Suitability Analysis, AI cover letters, and Keywords for every application.",
    "version": "0.1.3",
    "manifest_version": 3,
    "icons": {
        "16": "./images/icon-16x16.png",
        "32": "./images/icon-32x32.png",
        "48": "./images/icon-48x48.png",
        "128": "./images/icon-128x128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to open Job Ally",
        "default_icons": {
            "16": "./images/icon-16x16.png",
            "32": "./images/icon-32x32.png",
            "48": "./images/icon-48x48.png",
            "128": "./images/icon-128x128.png"
        }
    },
    "permissions": [        
        "sidePanel"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "css": ["foreground_styles.css"],
            "js": ["foreground_li.js"]
        },
        {
            "matches": ["https://*.indeed.com/*"],
            "css": ["foreground_styles.css"],
            "js": ["foreground_ind.js"]
        },
        {
            "matches": ["https://www.glassdoor.com/*"], 
            "css": ["foreground_styles.css"],
            "js": ["foreground_glsdr.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["config.json"],
            "matches": ["<all_urls>"]
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html",
        "default_width": 650
    }
}
