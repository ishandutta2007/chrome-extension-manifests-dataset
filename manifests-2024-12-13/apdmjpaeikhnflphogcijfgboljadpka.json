{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Simple Macro Recorder",
  "version": "1.1",
  "description": "Record and replay macros, including dropdown interactions.",
  "permissions": ["activeTab", "storage", "commands"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "start-recording": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Start recording macro"
    },
    "stop-recording": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Stop recording macro"
    },
    "playback-macro": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Play back recorded macro"
    }
  },
  "host_permissions": ["<all_urls>"]
}















