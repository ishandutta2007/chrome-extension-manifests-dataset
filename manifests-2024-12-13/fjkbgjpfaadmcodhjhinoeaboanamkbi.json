{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "version": "1.0.0",
    "name": "PicTweet",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*", "https://x.com/*"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["camera.png"],
        "matches": ["https://twitter.com/*", "https://x.com/*"]
    }],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
