{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "TextCraft - AI Assistant",
    "description": "Utilize the full power of AI in your browser! Translate, summarize, rewrite any text in just one click.",
    "version": "1.0.1",
    "action": {
      "default_title": "Click to open TextCraft panel"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "sidePanel"
    ],
    "externally_connectable": {
      "matches": ["*://localhost/*", "*://panel.textcraft.app/*"]
    },
    "icons": {
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "64": "img/icon-64.png",
        "128": "img/icon-128.png"
      },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["selection.js"],
          "run_at": "document_start",
          "all_frames": true
        }
      ]
  }