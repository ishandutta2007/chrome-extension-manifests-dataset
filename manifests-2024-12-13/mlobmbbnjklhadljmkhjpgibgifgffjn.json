{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Simplify Recipes",
  "version": "0.0.2",
  "description": "View recipe webpages in a clean, distraction-free format without ads, popups, or long stories",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.global.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "content.global.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "*.svg",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://simplify.recipes/*"
    ]
  }
}