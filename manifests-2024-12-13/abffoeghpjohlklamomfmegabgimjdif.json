{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Web Highlighter & Sticky Notes | Sitespedia - Annotate Websites and PDFs",
  "manifest_version": 3,
  "description": "Highlight and manage important words on websites and add them to sticky notes. You can also change the highlight colors.",
  "host_permissions": [
    "https://sitespedia.com/",
    "<all_urls>",
    "http://*/*",
    "https://*/",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "spa_pageComment.css",
        "stpa_highlighter_script.css"
      ],
      "js": [
        "stpa_highlighter_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "version": "0.3.3",
  "icons": {
    "16": "icons/highlighter-16x16.png",
    "32": "icons/highlighter-32x32.png",
    "128": "icons/highlighter-128x128.png",
    "512": "icons/highlighter-512x512.png"
  },
  "short_name": "Highlighter",
  "web_accessible_resources": [
    {
      "resources": [
        "/*",
        "icons/*",
        "frontend/*",
        "font/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      }
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "management"
  ]
}