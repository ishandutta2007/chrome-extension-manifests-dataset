{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "kkduniya-TextToVoice",
    "version": "1.0",
    "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icon16.png",
        "32": "/icon32.png",
        "48": "/icon48.png",
        "128": "/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["ttspeech.min.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  