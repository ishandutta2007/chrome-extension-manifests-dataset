{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "RedditScout",
    "version": "1.1",
    "description": "Track trending and viral content on Reddit",
    "permissions": [
      "storage",
      "tabs",
      "notifications"
    ],
    "host_permissions": [
      "*://*.reddit.com/*",
      "https://app.viralscout.xyz/*"
    ],
    "icons": {
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.reddit.com/*"],
        "js": ["license.js", "content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": [
        "icons/*.png"
      ],
      "matches": ["*://*.reddit.com/*"]
    }]
  }