{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Mirror My Words: AI-Powered Engagement Assistant",
  "version": "1.0.0",
  "description": "Intelligently suggests relevant comments for posts on LinkedIn and Twitter/X.com using AI",
  "author": "Saaszay Inc",
  "homepage_url": "https://www.saaszay.com/",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["tabs"],

  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.twitter.com/*",
    "https://x.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["data/comment_templates.json"],
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*"
      ]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "options.html"
}
