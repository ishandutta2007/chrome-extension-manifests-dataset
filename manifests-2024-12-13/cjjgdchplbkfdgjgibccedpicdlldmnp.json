  "manifest_version": 3,
  "name": "whaBro",
  "version": "1.0",
  "description": "Adds additional functionality to WhatsApp Web.",
  "permissions": ["activeTab", "contextMenus", "tabs", "storage", "scripting"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["emojis.js","content.js"],
      "css": ["styles.css"]
