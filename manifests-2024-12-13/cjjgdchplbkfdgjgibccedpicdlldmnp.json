    {
      "matches": ["<all_urls>"],
      "js": ["share.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_title": "whaBro Share",
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/48x48.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["modal.html", "icons/*", "injected_script.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src blob:;"
  }
