{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Stop Watching Me !",
    "version": "1.3",
    "description": "Stop websites recording your interactions",
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "storage"
    ],
    "host_permissions": [
      "*://*.clarity.ms/*",
      "*://*.hotjar.com/*",
      "*://*.crazyegg.com/*",
      "*://*.fullstory.com/*",
      "*://*.mouseflow.com/*",
      "*://*.luckyorange.com/*",
      "*://*.inspectlet.com/*",
      "*://*.smartlook.com/*",
      "*://*.clicktale.com/*",
      "*://*.contentsquare.com/*",
      "*://*.sessioncam.com/*",
      "*://*.pendo.io/*",
      "*://*.quantcast.com/*",
      "*://*.heatmap.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
  }
  