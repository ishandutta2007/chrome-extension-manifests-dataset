{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "IFS Login Background Changer",
  "version": "1.3",
  "description": "Changes the background image of the IFS landing login page based on the environment URL.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://*.ifs.cloud/auth/realms/*/login-actions/authenticate*",
        "https://*.ifs.cloud/auth/realms/*/protocol/openid-connect/auth*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": [
      "images/*.jpg"
    ],
    "matches": ["https://*.ifs.cloud/*"]
  }]
}
