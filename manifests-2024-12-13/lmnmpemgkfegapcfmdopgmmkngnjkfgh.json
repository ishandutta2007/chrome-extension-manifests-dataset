{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Translate WhatsApp and Instagram messages",
  "version": "2.1.1",
  "description": "Effortlessly translate messages with InstaTranslate, enabling smooth global connections and seamless communication!",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [ "http://*/", "https://*/", "https://translate.googleapis.com/", "https://web.whatsapp.com/*", "https://translate.googleapis.com/", "https://translate.googleapis.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*" , "https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "InstaTranslate"
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["16.png", "48.png", "128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}