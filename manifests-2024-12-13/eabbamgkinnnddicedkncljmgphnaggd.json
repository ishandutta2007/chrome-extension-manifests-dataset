      "https://stats.underdogfantasy.com/*",
      "https://login.underdogsports.com/*",
      "https://api.underdogfantasy.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://underdogfantasy.com/*"
        ],
        "css": ["styles.css"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "inject/*",
          "styles.css",
          "assets/**/*"
        ],
        "matches": [
          "https://underdogfantasy.com/*",
          "http://underdogfantasy.com/*"
        ]
      }
