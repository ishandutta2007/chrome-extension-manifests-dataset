{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "TwitterScout", 
    "version": "1.1",
    "description": "Find viral posts early and engage effectively",
    "permissions": [
      "storage",
      "tabs",
      "notifications"
    ],
    "host_permissions": [
      "*://*.twitter.com/*",
      "*://*.x.com/*"
    ],
    "icons": {
        "48": "icons/icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.x.com/*",
          "https://*.twitter.com/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "resources": [
          "icons/red.png",
          "icons/orange.png",
          "icons/yellow.png",
          "icons/green.png",
          "icons/gray.png",
          "icons/icon.png",
          "icons/logo.png"
        ],
        "matches": ["<all_urls>"]
    }]
  }