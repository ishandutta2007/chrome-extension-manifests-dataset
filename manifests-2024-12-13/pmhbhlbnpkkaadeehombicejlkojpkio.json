  "manifest_version": 3,
  "name": "Bitbucket PR Comment Filter",
  "version": "1.1",
  "description": "Filter PR comments by author in Bitbucket",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
