{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Hide Politics",
  "version": "1.3",
  "description": "Blocks political content on X. ",
  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://political-content-blocker.fly.dev/*",
    "https://www.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://political-content-blocker.fly.dev/ https://www.googleapis.com"
  },  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "supabase.min.js",
        "modules/cleanupUtils.js",
        "modules/hideTweet.js",
        "modules/initializePort.js",
        "modules/observeContent.js",
        "modules/processTweet.js",
        "modules/tweetUtils.js",
        "modules/trendingSectionHandler.js"
      ],
      "matches": [
        "*://*.x.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
