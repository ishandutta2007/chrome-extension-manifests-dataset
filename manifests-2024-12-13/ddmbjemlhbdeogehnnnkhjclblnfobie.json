{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "TubeTweet",
  "version": "1.2.3",
  "description": "YoutubeChatのコメント欄をTwitter（現X）の同時運用を補助する拡張機能",
  "action": {
    "default_icon": "./assets/icon_tt.png",
    "default_popup": "./dist/popup/index.html"
  },
  "options_ui": {
    "page": "./dist/popup/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "./assets/icon_tt.png",
    "48": "./assets/icon_tt.png",
    "128": "./assets/icon_tt.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://pro.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://pro.twitter.com/*"
      ],
      "js": [
        "dist/contentScripts/index.global.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/contentScripts/style.css"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://pro.twitter.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
