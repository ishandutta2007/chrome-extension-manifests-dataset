{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Salesforce Toolkit",
    "version": "1.3.20",
    "description": "Use SF Toolkit directly from chrome to visualize record details and analyze User access, profile, permissions, etc",
    "icons": {
        "128": "images/sf-toolkit-icon-128.png"
    },
    "action": {
        "default_title": "Click to open Salesforce Toolkit"
    },
    "commands": {
        "overlay_toggle": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "linux": "Ctrl+Shift+E",
                "mac": "Command+Shift+E",
                "windows": "Ctrl+Shift+E"
            },
            "description": "Enable/Disable the Overlay"
        },
        "open_overlay_search": {
            "description": "Overlay Open Search",
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "linux": "Ctrl+Shift+S",
                "mac": "Command+Shift+S",
                "windows": "Ctrl+Shift+S"
            }
        },
        "open_side_panel": {
            "description": "Open Side Panel",
            "suggested_key": {
                "default": "Ctrl+Shift+Space",
                "linux": "Ctrl+Shift+Space",
                "mac": "Command+Shift+Space",
                "windows": "Ctrl+Shift+Space"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.sf-toolkit.com/*",
                "http://localhost:3000/*"
            ],
            "run_at":"document_end",
            "js": ["scripts/inject_toolkit.js"]
        },
        {
            "matches": [
                "https://*.salesforce.com/*",
                "https://*.salesforce-setup.com/*",
                "https://*.lightning.force.com/*",
                "https://*.salesforce.mil/*",
                "https://*.lightning.force.mil/*"
            ],
            "exclude_globs": [ "*salesforce.com/#/*" ],
            "exclude_matches": [
                "https://*/setup/secur/RemoteAccessAuthorizationPage.apexp*",
                "https://*/_ui/common/apex/debug/*",
                "https://*/_ui/*",
                "https://test.salesforce.com/",
                "https://login.salesforce.com/",
                "https://*/loginflow/*"
            ],
            "run_at":"document_end",
            "js": [
                "scripts/inject_salesforce.js"
            ],
            "css" : [
                "styles/slds-sf-toolkit.css",
                "styles/inject.css",
                "styles/extension.css",
                "styles/web.css"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "scripts/*",
                "assets/*",
                "styles/*",
                "libs/*",
                "views/*",
                "openai/index.js",
                "workers/openaiWorker/worker.js"
            ]
        }
    ],
    "options_ui": {
        "page": "views/app.html?applicationName=settings",
        "open_in_tab": true
    },
    "host_permissions": [
        "https://*/*",
        "*://*/*"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "identity",
        "cookies",
        "storage",
        "tabs",
        "tabGroups",
        "sidePanel",
        "contextMenus",
        "unlimitedStorage"
    ],
    "incognito": "spanning"
  }