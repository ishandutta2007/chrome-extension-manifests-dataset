  "manifest_version": 3,
  "name": "Clockdiary Time Tracker",
  "version": "1.0.8",
  "description": "ClockDiary Time Tracker Extension",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "idle",
    "notifications",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://clockdiary-be.azurewebsites.net/*"
  ],
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "48x48.png"
  },
  "icons": {
    "48": "48x48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.clockdiary.com/*",
        "https://trello.com/*"
      ],
      "js": [
        "src/pages/content/index.js"
      ],
      "css": [
        "assets/css/contentStyle17331427406.chunk.css"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "<all_urls>",
      "http://localhost/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "48x48.png",
        "48x48.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "StartSTopTimerShortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "short cut command to start and stop timer if enabled from setting"
    }
  }
