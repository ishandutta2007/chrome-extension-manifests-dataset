{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "MicroWave for LinkedIN",
    "version": "1.3",
    "description": "This extension automates lead generation and nurturing on LinkedIN",
    "icons": {
        "128": "./assets/ico/icon128.png",
        "48": "./assets/ico/icon48.png",
        "16": "./assets/ico/icon16.png"
    },
    "background": {
        "scripts": [
            "./dist/bg.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "js": [
                "./assets/js/jquery-2.2.4.min.js",
                "./dist/content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "assets/ico/icon48.png",
        "default_popup": "src/popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "https://www.linkedin.com/*"
    ],
    "web_accessible_resources": [
        "./assets/img/*.*"
    ],
    "options_page": "src/options.html"
}