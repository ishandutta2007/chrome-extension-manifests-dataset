{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Bible Verse Vista",
    "version": "1.0.0",
    "description": "A highly customizable Bible verse reader that appears on and replaces the new tabs.",
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
