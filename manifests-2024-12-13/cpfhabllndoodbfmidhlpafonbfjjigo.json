{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.3",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "common_utils.js",
        "twitter_content.js"
      ],
      "css": [
        "twitter_styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://web.okjike.com/*"
      ],
      "js": [
        "common_utils.js",
        "jike_content.js"
      ],
      "css": [
        "jike_styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://weibo.com/*"
      ],
      "js": [
        "common_utils.js",
        "weibo_content.js"
      ],
      "css": [
        "weibo_styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
    "default_title": "__MSG_extName__"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
