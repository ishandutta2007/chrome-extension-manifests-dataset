  "manifest_version": 3,
  "name": "Erudia",
  "description": "Make Erudia your default search engine.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Erudia",
      "keyword": "erudia",
      "search_url": "https://erudiasearch.com/search?method=index&q={searchTerms}",
