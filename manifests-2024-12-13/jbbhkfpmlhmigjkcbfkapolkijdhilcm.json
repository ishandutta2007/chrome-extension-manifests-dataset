      "is_default": true
    }
  },
  "permissions": ["tabs"], 
  "content_scripts": [
    {
      "matches": ["https://erudiasearch.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "128.png",
      "48": "128.png",
      "128": "128.png"
    }
  }
