  "web_accessible_resources": [
    {
      "resources": ["AmazonReview_Icon_16x16.png", "AmazonReview_Icon_48x48.png", "AmazonReview_Icon_128x128.png"],
      "matches": ["https://*.amazon.com/*"]
    }
  ]
