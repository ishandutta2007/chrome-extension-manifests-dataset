{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Test Companion",
  "version": "1.4",
  "description": "Captures webpage interactions with screenshots and URLs, sending data to Test Companion for test cases and bug reports.",
  "permissions": ["tabs", "storage", "activeTab", "scripting", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "./js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "side-panel.html",
        "settings.html",
        "styles/*",
        "js/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
