    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["src/*.js", "src/utils/*.js"],
    "matches": ["<all_urls>"]
