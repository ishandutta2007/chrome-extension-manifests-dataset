{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Edition Mode",
  "description": "Enable an edition mode to modify any text in a web page.",
  "short_name": "EditionMode",
  "version": "1.1.0.0",

  "icons": {
    "16": "extension_icons/editionmode-active-16.png",
    "32": "extension_icons/editionmode-active-32.png",
    "48": "extension_icons/editionmode-active-48.png",
    "128": "extension_icons/editionmode-active-128.png"
  },

  "action": {
    "default_icon": "extension_icons/editionmode-inactive-16.png"
  },

  "background": {
      "service_worker": "background_scripts/switch_extension_icon.js"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Enable/disable Edition Mode"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery/jquery-3.4.1.min.js",
        "content_scripts/set_content_editable.js"
      ],
      "css": [
        "styles/edition_mode.css"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "extension_icons/editionmode-active-16.png",
        "extension_icons/editionmode-inactive-16.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}