{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Ampache Media Keys",
    "description": "When activated, this extension will let you control Ampache with your keyboard's media keys.",
    "version": "0.02",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_icon": {
            "16": "/images/logo_16.png",
            "32": "/images/logo_32.png",
            "48": "/images/logo_48.png",
            "128": "/images/logo_128.png"
        },
        "default_title": "Click this while in an Ampache tab to activate"
    },
    "icons": {
        "16": "/images/logo_16.png",
        "32": "/images/logo_32.png",
        "48": "/images/logo_48.png",
        "128": "/images/logo_128.png"
    },

    "commands": {
        "playPause": {
            "suggested_key": {
                "default": "MediaPlayPause"
            },
            "global": true,
            "description": "Toggle play/pause"
        },
        "playNext": {
            "suggested_key": {
                "default": "MediaNextTrack"
            },
            "global": true,
            "description": "Play next track"
        },
        "playPrev": {
            "suggested_key": {
                "default": "MediaPrevTrack"
            },
            "global": true,
            "description": "Play previous track"
        },
        "stop": {
            "suggested_key": {
                "default": "MediaStop"
            },
            "global": true,
            "description": "Stop media playback"
        }
    }
}