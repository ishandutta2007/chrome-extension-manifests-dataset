{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Zendesk Enhancer",
    "version": "1.3.7",
    "description": "Enhances Zendesk with auto-refresh, notifications, and integrated PDF opener.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.zendesk.com/*"],
            "js": ["pdfOpener.js", "autoRefresh.js", "notification.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "48": "logo.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "simpleviewer.html",
                "lib/pdf.js",
                "lib/pdf.worker.js",
                "lib/pdf.sandbox.js",
                "cmaps/*",
                "pdfs/*.pdf"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
