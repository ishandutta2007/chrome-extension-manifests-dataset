{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "GloCommentTags",
  "version": "1.0",
  "description": "Bookmark any area of a web page and automatically add the link to a comment in your ticket.",
  "manifest_version": 2,
  "devtools_page": "devtools.html",
  "offline_enabled": false,
  "icons": {
    "16": "GloScreenTags16.png",
    "48": "GloScreenTags48.png",
    "128": "GloScreenTags128.png"
  },
  "web_accessible_resources": [
    "GloScreenTags48.png"
  ],
  "permissions": [
    "tabs",
    "https://app.gitkraken.com/*",
    "https://api.gitkraken.com/*",
    "https://gloapi.gitkraken.com/v1/glo/*",
    "https://stackpath.bootstrapcdn.com/*",
    "identity",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Inject!"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}