      "js": ["content-script.js"],
      "css": ["scripts/styles/content.css"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*"],
      "matches": ["https://old.reddit.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://old.reddit.com/*"]
