{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "AdUnveil",
    "version": "1.3",
    "description": "Get ad data from Google Ads Transparency.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions":[
        "https://api.adunveil.com/*",
        "https://adstransparency.google.com/*",
        "https://tpc.googlesyndication.com/*"
    ],
    "content_scripts":
        [
            {
                "matches": ["https://adstransparency.google.com/*"],
                "js": ["advertiser.js"],
                "run_at": "document_idle"
              },
            {
            "matches": ["https://adstransparency.google.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_start"
            },
            {
                "matches": ["https://www.facebook.com/ads/library/*"],
                "js": ["facebook_ads.js"],
                "run_at": "document_idle"
              },
              {
                "matches": ["https://tpc.googlesyndication.com/*"],
                "js": ["iframe-content-script.js"],
                "all_frames": true,
                "run_at": "document_idle"
              }
    ],
    "action": {
      "default_icon": "avlogo.png",
      "default_popup": "popup.html"
    }
  }