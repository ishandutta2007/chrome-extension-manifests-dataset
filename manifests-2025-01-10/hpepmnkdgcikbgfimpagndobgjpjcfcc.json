      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["libs/ffmpeg-wasm/ffmpeg.min.js", "libs/ffmpeg-wasm/ffmpeg-core.js", "background.js"],
