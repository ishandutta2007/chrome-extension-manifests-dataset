{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "TruckersHub Extension",
  "version": "1.1",
  "description": "Fetch TruckersHub details based on Steam ID / TruckersMP ID of the current profile.",
  "homepage_url": "https://truckershub.in/",
  "permissions": [],
  "host_permissions": [
    "*://api.truckersmp.com/*",
    "*://traffic.krashnz.com/*",
    "*://api.truckershub.in/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://truckersmp.com/user/*",
        "*://truckersmp.com/profiles/*",
        "*://steamcommunity.com/id/*",
        "*://steamcommunity.com/profiles/*",

        "*://steamcommunity.com/id/*/friends",
        "*://steamcommunity.com/id/*/friends/*",
        "*://steamcommunity.com/profiles/*/friends",
        "*://steamcommunity.com/profiles/*/friends/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  }
}