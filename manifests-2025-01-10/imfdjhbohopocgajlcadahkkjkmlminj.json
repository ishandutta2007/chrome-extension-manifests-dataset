{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Pacifist Web Extension",
  "version": "2.0.0",

  "description": "The browser extension for Pacifist",
  "homepage_url": "https://www.charlessoft.com",

  "icons": {
    "48": "icons/icon_48x48.png",
    "96": "icons/icon_96x96.png"
  },

  "permissions": [
    "declarativeNetRequest",
    
    "nativeMessaging"
  ],

  
  "host_permissions": [
    "<all_urls>"
  ],
  

  "background": {
    
    "service_worker": "service_worker.js",
    "type": "module"
    

    
  },

  "action": {
    "default_icon": "icons/icon_48x48.png"
  },

  
  "content_security_policy": {
    "extension-pages": "script-src 'self'; object-src 'self';"
  },
  

  

  "web_accessible_resources": [
    
    {
      "resources": [
    
        "browser-shim.js",
        "listing.html",
        "listing.css",
        "listing.js",
        "pacifisthtml.js",
        "blank.gif",
        "tinyinflate.js"
    
      ],
      "matches": [
        "*://*/*"
      ]
    }
    
  ]
}
