            "css": [
                "styles/content-styles.css"
            ]
        },
        {
            "matches": [
                "https://app.sparklin.ai/*"
            ],
            "js": [
                "src/content-sparklin.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/sparklin-icon-16.png",
            "48": "assets/sparklin-icon-48.png",
            "128": "assets/sparklin-icon-128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
