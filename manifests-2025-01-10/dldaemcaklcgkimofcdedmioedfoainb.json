{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Video Link Saver",
  "version": "1.0",
  "description": "Save and organize video links for later viewing.",
  "permissions": [
    "activeTab",
    "storage",
    "https://www.googleapis.com/"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/pop16.png",
      "48": "images/pop48.png",
      "128": "images/pop128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.vimeo.com/*",
        "*://*.netflix.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.primevideo.com/*",
        "*://*.spotify.com/*",
        "*://*.soundcloud.com/*",
        "*://*.udemy.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "save-main-video": {
      "suggested_key": {
        "default": "Ctrl+A",
        "mac": "MacCtrl+A"
      },
      "description": "Save Main Video"
    }
  },
  "icons": {
    "16": "images/pop16.png",
    "48": "images/pop48.png",
    "128": "images/pop128.png"
  }
}
