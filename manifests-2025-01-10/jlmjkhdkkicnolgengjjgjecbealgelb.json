{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Groq Toolbox",
  "description": "Make use of Groq API more easily.",
  "version": "3.19",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_width": 800,
    "default_height": 600
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/html2canvas.min.js",
        "content.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/html2canvas.min.js",
        "lib/marked.min.js",
        "lib/idb.js",
        "lib/xlsx.full.min.js",
        "lib/tailwind.min.css",
        "lib/fontawesome.min.css",
        "lib/all.min.css",
        "lib/webfonts/fa-brands-400.ttf",
        "lib/webfonts/fa-brands-400.woff2",
        "lib/webfonts/fa-regular-400.ttf",
        "lib/webfonts/fa-regular-400.woff2",
        "lib/webfonts/fa-solid-900.ttf",
        "lib/webfonts/fa-solid-900.woff2",
        "lib/webfonts/fa-v4compatibility.ttf",
        "lib/webfonts/fa-v4compatibility.woff2",
        "webfonts/fa-brands-400.ttf",
        "webfonts/fa-brands-400.woff2",
        "webfonts/fa-regular-400.ttf",
        "webfonts/fa-regular-400.woff2",
        "webfonts/fa-solid-900.ttf",
        "webfonts/fa-solid-900.woff2",
        "webfonts/fa-v4compatibility.ttf",
        "webfonts/fa-v4compatibility.woff2",
        "lib/mermaid.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "default_templates.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
