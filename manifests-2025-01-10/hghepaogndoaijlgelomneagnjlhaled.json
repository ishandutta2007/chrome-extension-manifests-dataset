      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://omnireader.readio.online/*",
        "*://www.facebook.com/*",
        "*://twitter.com/*",
        "*://www.instagram.com/*",
        "*://discord.com/*",
        "*://www.royalroad.com/*",
        "*://web.whatsapp.com/*",
        "*://read.amazon.com/*",
        "*://archiveofourown.org/*",
        "*://app.plex.tv/*",
        "*://www.scribblehub.com/*",
        "*://play.google.com/*"
      ],
      "exclude_globs": ["*://*novel*/*", "*://*fiction*/*"],
      "js": ["content-script.js"]
    },
    {
      "matches": ["*://docs.google.com/document/*"],
      "run_at": "document_start",
      "js": ["gdocs.js"],
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
