  "action": {
    "default_icon": "stopwatch22.png",
    "default_popup": "info.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["timer.js"]
    }
  ],
  "host_permissions": ["http://*/*"],
  "permissions": ["tabs", "storage", "alarms"],
  "icons": {
    "16": "stopwatch16.png",
    "48": "stopwatch48.png",
