{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Auto-Reload Target URL",
  "version": "1.4.1",
  "manifest_version": 3,
  "description": "Reloads a target URL every specified seconds.",
  "background": {
    "service_worker": "background.js"
