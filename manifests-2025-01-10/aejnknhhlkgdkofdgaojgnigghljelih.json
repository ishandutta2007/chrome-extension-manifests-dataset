{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "X Comment Saver",
  "version": "1.0",
  "description": "Automatically saves your X comments to Google Sheets",
  "permissions": [
    "storage",
    "scripting",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["install.html", "confetti.js"],
    "matches": ["<all_urls>"]
  }]
}