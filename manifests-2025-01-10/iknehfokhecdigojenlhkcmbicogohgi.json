{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Time2Read Estimator",
  "version": "1.1.2",
  "description": "This extension estimates the reading time of articles/ documentations/ news and display it under the title",
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "img/T2R1.png",
    "32": "img/T2R1.png",
    "48": "img/T2R1.png",
    "128": "img/T2R1.png"
  },
  "action": {
    "default_icon": {
      "16": "img/T2R1.png",
      "32": "img/T2R1.png",
      "48": "img/T2R1.png",
      "128": "img/T2R1.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "<all_urls>"
      ],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-estimation": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
    "description": "toggle the estimation for the current tab by hitting Ctrl+Shift+2, or Command+Shift+2 on Mac"
    } 
  }
}
