        ],
        "run_at": "document_start",
        "js": ["assets/js/jquery.min.js", "assets/js/content_scripts.js", "assets/js/tab_script.js"],
        "css": ["assets/css/speak_text.css"]
    }],
    "tts_engine": {
        "voices": [{
                "voice_name": "Alice",
                "lang": "en-US",
                "event_types": ["start", "marker", "end"]
