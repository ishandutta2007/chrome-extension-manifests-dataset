        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens main.html"
        }
    },
    "browser_action": {
        "default_popup": "main.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "run_at": "document_start",
        "css": ["content.css"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["activeTab"]
