{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Spotlight Search",
    "description" : "Helps with spotting search matches on pages with too many details",
    "version": "0.1",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
