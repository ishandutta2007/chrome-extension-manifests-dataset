{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Christmas Hat for Twitter",
    "description": "Add a festive Christmas hat to your Twitter profile picture with a fun, interactive Chrome extension.",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "content.js",
                "popup.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/christmas-hat.gif"
            ],
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ]
        }
    ]
}