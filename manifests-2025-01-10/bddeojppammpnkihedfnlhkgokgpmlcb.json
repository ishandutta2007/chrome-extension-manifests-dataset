{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Social Media Blocker",
  "version": "1.1",
  "permissions": ["activeTab", "tabs", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.x.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "./popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  }
}
