{
"update_url": "https://clients2.google.com/service/update2/crx",

  "version": "1.4.4",
  "name": "Notix: Notion Web Clipper",
  "manifest_version": 3,
  "description": "Save the Web to Notion. Use AI to create summaries and auto-prefills. Easily create how-to guides with screenshots in Notion.",
  "default_locale": "en",
  "permissions": [
    "webNavigation",
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:8001/*",
      "https://notix.so/*"
    ]
  },
  "side_panel": {
    "default_path": "./index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}