{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "GooderReads",
  "version": "1.2",
  "description": "Don't let bad reviews rain on your parade. This extension hides all 1, 2, and 3 star reviews, and the average rating.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.goodreads.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.goodreads.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.goodreads.com/*"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "sources/gooderreads_logo_16.png",
      "32": "sources/gooderreads_logo_32.png",
      "48": "sources/gooderreads_logo_48.png",
      "96": "sources/gooderreads_logo_96.png",
      "128": "sources/gooderreads_logo_128.png"
    }
  },
  "icons": {
    "16": "sources/gooderreads_logo_16.png",
    "32": "sources/gooderreads_logo_32.png",
    "48": "sources/gooderreads_logo_48.png",
    "96": "sources/gooderreads_logo_96.png",
    "128": "sources/gooderreads_logo_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["https://*.goodreads.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "buchner.patrick@gmx.at",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    },
    "safari": {
      "strict_min_version": "14"
    }
  }
}
