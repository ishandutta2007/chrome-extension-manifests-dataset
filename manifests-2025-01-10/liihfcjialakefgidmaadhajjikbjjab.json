{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "alphaXiv - Open Research Discussion",
  "version": "2.0.0",
  "description": "The official Chrome Extension for alphaXiv, the site for open research discussion directly on top of arXiv.",
  "host_permissions": [
    "https://api.alphaxiv.org/*",
    "https://www.alphaxiv.org/*",
    "https://alphaxiv.org/*",
    "https://arxiv.org/*"
  ],
  "permissions": [
    "storage",
    "scripting",
    "cookies",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.iife.js",
    "type": "module"
  },
  "action": {
    "default_title": "Navigate to AlphaXiv"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/abs/*"
      ],
      "js": [
        "arxiv-abstract/index.iife.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "*.svg",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}