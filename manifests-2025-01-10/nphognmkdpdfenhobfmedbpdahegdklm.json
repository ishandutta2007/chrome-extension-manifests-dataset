{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "CopySplash (Unsplash Image Customizer)",
  "version": "1.2.7",
  "description": "Copy, download and customize Unsplash image URL with a click!",
  "permissions": ["clipboardWrite", "storage", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://unsplash.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CopySplash\nClick to set image settings",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
