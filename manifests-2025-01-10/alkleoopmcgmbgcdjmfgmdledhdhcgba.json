{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Hover Networks Chrome Extension",
  "description": "Pop up new Chrome window or tab when receiving calls from your Hover Networks phone, plus click-to-dial for numbers in webpages.",
  "version": "2.1",
  "homepage_url": "http://www.hovernetworks.com",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/favicon.png",
    "16": "icons/favicon.png",
    "48": "icons/favicon.png"
  },
  "permissions": ["contextMenus", "offscreen", "tabs", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "options_page": "options-page/index.html",
  "content_scripts": [
    {
      "css": ["css/webdialer.css"],
      "js": [
        "content-scripts/webdialer.js",
        "js/jquery-1.9.1.min.js",
        "js/bootstrap.min.js"
      ],
      "matches": ["\u003Call_urls>"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/new-logo.png",
        "css/bootstrap.min.css",
        "src/options_custom/settings.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
