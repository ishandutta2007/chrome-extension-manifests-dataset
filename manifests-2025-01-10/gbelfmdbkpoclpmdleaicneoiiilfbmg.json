"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Website Accessibility Helper by Ensquire",
  "version": "1.0",
  "description": "Make websites easier to read and navigate based on your needs. We support Color Blindess, Dyslexia, Vision Impairment, and more.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
  "default_popup": "index.html",
  "default_icon": {
    
    "48": "/48.png",
    "128": "/128.png"
  }
},
"icons": {
  
  "48": "/48.png",
  "128": "/128.png"
},
  "web_accessible_resources": [
    {
      "resources": [
        "font.css",
        "fonts/OpenDyslexic-Regular.woff",
        "Open_Sans/OpenSans-Italic-VariableFont_wdth,wght.ttf"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
