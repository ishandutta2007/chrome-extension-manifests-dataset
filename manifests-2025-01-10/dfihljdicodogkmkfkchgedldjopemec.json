{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "RepairShopr+",
    "description": "RepairShopr service extension for increased functionality and QOL fixes.",
    "version": "1.6.1",
    "manifest_version": 3,
    "icons": {
        "16": "/assets/icon-16x16.png",
        "32": "/assets/icon-32x32.png",
        "48": "/assets/icon-48x48.png",
        "128": "/assets/icon-128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.repairshopr.com/*"],
            "js": ["global.js"]
        },
        {
            "matches": ["https://*.repairshopr.com/tickets"],
            "js": ["tickets.js", "charges.js"],
            "css": ["tickets.css", "charges.css"]
        },
        {
            "matches": ["https://*.repairshopr.com/tickets/0*",
                        "https://*.repairshopr.com/tickets/1*",
                        "https://*.repairshopr.com/tickets/2*",
                        "https://*.repairshopr.com/tickets/3*",
                        "https://*.repairshopr.com/tickets/4*",
                        "https://*.repairshopr.com/tickets/5*",
                        "https://*.repairshopr.com/tickets/6*",
                        "https://*.repairshopr.com/tickets/7*",
                        "https://*.repairshopr.com/tickets/8*",
                        "https://*.repairshopr.com/tickets/9*"
                        ],
            "js": ["ticket_page.js", "charges.js"],
            "css": ["charges.css"]
        },
        {
            "matches": ["https://*.repairshopr.com/registers/*/close",
                        "https://*.repairshopr.com/registers/*/open"
                        ],
            "js": ["pos.js"],
            "css": ["checkbox.css"]
        },
        {
            "matches": ["https://*.repairshopr.com/payments/new*"],
            "js": ["payments.js"],
            "css": ["payments.css", "toggle.css", "checkbox.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "RepairShopr+ Settings",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/icon-16x16.png",
            "48": "/assets/icon-48x48.png",
            "128": "/assets/icon-128x128.png"
          }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": ["/assets/link_black.png", "/assets/link_white.png"],
            "matches": ["<all_urls>"]
        }
    ]
}