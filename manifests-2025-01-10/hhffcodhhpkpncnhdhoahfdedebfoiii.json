{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "FastHKU",
  "version": "4.1.1",
  "description": "One step to access HKU services",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lib.hku.hk/hkulauth*", 
        "https://hkuportal.hku.hk/cas/login*",
        "https://moodle.hku.hk/*",
        "https://adfs.connect.hku.hk/*",
        "https://hkuportal.hku.hk/login.html",
        "https://hkuportal.hku.hk/cas/aad*"
      ],
      "js": ["scripts/functions.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://hkuportal.hku.hk/cas/login*",
        "https://hkuportal.hku.hk/login.html"
      ],
      "js": ["scripts/portal_login.js"]
    },
    {
      "matches": ["https://lib.hku.hk/hkulauth*"],
      "js": ["scripts/add_login_script.js"]
    },
    {
      "matches": ["https://moodle.hku.hk/login/index.php"],
      "js": ["scripts/moodle_goto_login.js"]
    },
    {
      "matches": ["https://moodle.hku.hk/"],
      "js": ["scripts/redirect_to_login.js"]
    },
    {
      "matches": ["https://hkuportal.hku.hk/cas/aad*"],
      "js": ["scripts/cas_aad_login.js"]
    },
    {
      "matches": ["https://adfs.connect.hku.hk/adfs/ls*"],
      "js": ["scripts/adfs_login.js"]
    }
  ],
  "action": {
    "default_popup": "popup/main.html"
  },
  "options_ui": {
    "page": "popup/options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["scripts/lib_login.js"],
    "matches": ["<all_urls>"]
  }]
}
