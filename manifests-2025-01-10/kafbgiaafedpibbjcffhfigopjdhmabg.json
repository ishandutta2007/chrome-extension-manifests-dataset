{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Mark Location",
    "version": "1.0.0",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "16": "chromium/mark_location_16.png",
        "48": "chromium/mark_location_48.png",
        "128": "chromium/mark_location_128.png"
