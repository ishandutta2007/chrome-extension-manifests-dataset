{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "LFV Local Recording",
  "short_name": "LFV Local Recording",
  "version": "0.1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "description": "This is the workshop extension utility for screensharing support in the workshop.",
  "background": {
    "scripts": [
      "background/background.common.js",
      "background/background.js",
      "background/background.desktopCapture.js",
      "background/background.tabCapture.js",
      "background/background.badgeText.js",
      "background/background.getUserMedia.js",
      "background/background.messaging.js",
      "background/background.players.js",
      "RecordRTC/MediaStreamRecorder.js",
      "RecordRTC/MultiStreamRecorder.js",
      "RecordRTC/MultiStreamsMixer.js",
      "RecordRTC/StereoAudioRecorder.js",
      "RecordRTC/DiskStorage.js",
      "RecordRTC/EBML.js",
      "blobDuration/getBlobDuration.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "background/background.contentScript.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "images/main-icon.png",
    "default_title": "Record Your Screen, Tab or Camera",
    "default_popup": "options.html"
  },
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "permissions": [
    "management",
    "desktopCapture",
    "storage",
    "tabs",
    "tabCapture",
    "activeTab",
    "<all_urls>",
    "identity",
    "https://www.googleapis.com/*"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "web_accessible_resources": [
    "images/main-icon.png",
    "preview.html"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}