  "icons": {
    "16": "icons/beautify-markdown.png",
    "48": "icons/beautify-markdown.png",
    "128": "icons/beautify-markdown.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/GeistVF.woff",
        "fonts/GeistMonoVF.woff",
        "styles.css",
        "fonts.css"
      ],
      "matches": [
        "<all_urls>"
