{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Page Commenter",
  "version": "1.2",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "add-comment": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Add a comment to the current page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["comment_popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
