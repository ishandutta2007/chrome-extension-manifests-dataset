{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Проверка орфографии",
  "short_name": "Spell Check Page",
  "version": "1.0.2",
  "description": "Проверка орфографии и пунктуации - онлайн-расширение для улучшения качества текста и исправления ошибок",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "spell/background.js"
  },
  "action": {
    "default_title": "Spell check this page",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["typo/dictionaries/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-spell-check": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle Spell Check"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
