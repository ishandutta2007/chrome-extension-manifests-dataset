{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": " Indexability Checker",
  "version": "1.6",
  "description": "Checks if a site is indexable and indicates status with the extension icon.",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/green_icon_16.png",
      "48": "icons/green_icon_48.png",
      "128": "icons/green_icon_128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Check if site is indexable"
  },
  "icons": {
    "16": "icons/green_icon_16.png",
    "48": "icons/green_icon_48.png",
    "128": "icons/green_icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
