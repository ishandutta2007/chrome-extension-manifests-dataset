    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content_scripts/twitter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content_scripts/facebook.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
