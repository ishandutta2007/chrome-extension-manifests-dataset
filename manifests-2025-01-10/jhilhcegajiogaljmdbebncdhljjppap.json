"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Screenshot and Screen Recorder",
  "version": "1.0",
  "description": "Take screenshots and record your screen",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "windows",
    "background",
    "storage",
    "downloads",
    "downloads.shelf",
    "sidePanel"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "dist/background.min.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.min.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/capture.min.js"
      ],
      "all_frames": true
    }
  ]
