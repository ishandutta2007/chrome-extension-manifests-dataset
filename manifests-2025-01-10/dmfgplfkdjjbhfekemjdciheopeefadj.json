      "css": ["jquery-ui.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "resizable_white.png"
  ],

  "permissions": ["http://*.youtube.com/*",
                  "https://www.youtube.com/*",
                  "storage"],

  "browser_action": {
    "default_title": "Persistent Video Viewer",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
