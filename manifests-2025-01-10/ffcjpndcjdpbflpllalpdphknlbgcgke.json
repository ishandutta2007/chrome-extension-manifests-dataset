{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "PR Review Buddy",
  "version": "0.1",
  "description": "Enhances GitHub PR reviews by generating descriptive summaries and providing full-context code change analysis.",
  "permissions": ["activeTab", "clipboardWrite", "scripting", "storage"],
  "host_permissions": [
    "https://patch-diff.githubusercontent.com/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*",
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["sidebar.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.css"],
      "matches": ["https://github.com/*"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
}
