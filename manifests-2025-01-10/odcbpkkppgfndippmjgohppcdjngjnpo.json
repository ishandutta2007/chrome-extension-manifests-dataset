{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Link Scraper",
  "description": "Scrape links from the current tab, then copy them to clipboard or save them to a file.",
  "version": "1.0.2",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["background.js", "scrape.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/", "https://*/"],
      "js": ["background.js", "scrape.js"]
    }
  ]
}
