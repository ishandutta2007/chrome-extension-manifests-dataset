{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "commands": {
    "copy-transcript": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "Copy transcript to clipboard"
    },
    "summarize": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Summarize transcript"
    },
    "translate": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "Translate transcript"
    },
    "format": {
      "suggested_key": {
        "default": "Alt+3",
        "mac": "Alt+3"
      },
      "description": "Format transcript"
    }
  },
  "name": "__MSG_extName__",
  "version": "1.3",
  "description": "__MSG_extDescription__",
  "default_locale": "ja",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://aistudio.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content-script-youtube.js"],
      "type": "module"
    },
    {
      "matches": [
        "https://claude.ai/*",
        "https://claude.ai/chat/*",
        "https://claude.ai/new"
      ],
      "js": ["js/content-script-claude.js"],
      "type": "module",
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://aistudio.google.com/app/prompts/new_chat",
        "https://aistudio.google.com/app/prompts/*"
      ],
      "js": ["js/content-script-gemini.js"],
      "type": "module",
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["js/content-script-chatgpt.js"],
      "type": "module",
      "run_at": "document_end",
      "world": "MAIN"
    }
  ]
}
