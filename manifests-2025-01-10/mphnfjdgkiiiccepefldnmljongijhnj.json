        "48":  "resources/img/icons/pencil48.png",
        "64":  "resources/img/icons/pencil64.png",
        "128": "resources/img/icons/pencil128.png",
        "256": "resources/img/icons/pencil256.png",
        "512": "resources/img/icons/pencil512.png"
    }
