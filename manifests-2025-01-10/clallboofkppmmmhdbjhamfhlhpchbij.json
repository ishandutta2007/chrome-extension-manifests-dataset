  "options_page": "exclude.html",
  "content_scripts": [{
    "all_frames": true,
    "js": [
      "js/common.js",
      "js/contentscript.js"
    ],
    "matches": [
      "*://*/*"
    ],
    "run_at": "document_idle"
  }],
  "icons": {
    "128": "icons/icon-128.png",
    "48": "icons/icon-48.png",
    "16": "icons/icon-16.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-128.png",
    "default_popup": "popup.html"
  }
