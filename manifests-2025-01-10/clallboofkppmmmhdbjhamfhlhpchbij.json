  "manifest_version": 2,
  "name": "Easy Image Control",
  "description": "Block images, videos, audio connections, hide title, hide favicon.",
  "version": "4.0",
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
