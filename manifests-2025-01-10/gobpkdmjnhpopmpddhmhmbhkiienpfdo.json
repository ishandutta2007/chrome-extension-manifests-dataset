{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Quick Translate",
    "author": "Asım TAŞ",
    "description": "This extension provides quick translation of selected texts",
    "version": "2.6",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/translate_popup.css"
            ],
            "js": [
                "js/common/jquery-2.1.4.min.js",
                "js/common/jquery.draggable.js",
                "js/common/common.js",
                "js/common/languages.js",
                "js/contentscript/reminderhelper.js",
                "js/contentscript/translate.js",
                "js/contentscript/main.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "js/background/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "css/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "19": "icons/icon19.png",
            "38": "icons/icon38.png"
        },
        "default_title": "Quick Translate",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://translate.google.com/",
        "https://translate.google.com/"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Q"
            }
        }
    }
}