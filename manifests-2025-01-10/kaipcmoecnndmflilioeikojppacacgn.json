{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Cardemy Extension",
  "version": "1.2.1",
  "description": "Capture words from any website and add them to your Cardemy flashcards!",
  "permissions": [
    "storage",
    "webNavigation",
    "contextMenus"
   
  
  ],
  "host_permissions": [
    "*://*/*"
  ],



  "icons": {
    "48": "img/favicon.png",
    "128": "img/favicon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "img/favicon.png",
      "48": "img/favicon.png",
      "128": "img/favicon.png"
    }
  }
  ,
  "content_scripts": [
    {
      "matches": ["https://cardemy.com/*","http://localhost/*"],
      "js": ["js/authentification.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/lib/popup.min.js","js/dicpopup.js","js/localization.js"],
      "css": ["css/styles.css"],
      "exclude_matches" : ["https://cardemy.com/*"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "exclude_matches": ["https://www.youtube.com/results?*"],
      "js": ["js/youtube_transcriptions.js"]
    }
  ]
  ,
  "web_accessible_resources": [
    {
      "resources": ["img/icon.png","js/env.json","img/sad.png","img/bug.png"],
      "matches": ["<all_urls>"]
    }
  ]
  

 }
 
 
 
 
 
 