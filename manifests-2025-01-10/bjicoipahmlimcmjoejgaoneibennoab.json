  "name": "Hyper Bold",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "An accessability extension for those with ADHD who struggle to read text on the web.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
