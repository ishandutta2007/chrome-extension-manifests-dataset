    "default_popup": "popup.html",
    "default_icon": "active.png"
  },
  "icons":{
    "128": "active.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
