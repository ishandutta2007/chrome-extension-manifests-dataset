  },
  "commands": {
    "move-ruler-down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Move the ruler down by 7px"
    },
    "move-ruler-up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Move the ruler up by 7px"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  
  ]
