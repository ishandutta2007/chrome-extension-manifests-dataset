{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Banner Dimensions",
  "description": "Use the Banner Dimensions tool to accurately measure the pixel dimensions of web elements and distances between elements.",
  "version": "1.0.1",
  "manifest_version": 3,
  "author": "Terry Lawson",
  "default_locale": "en",
  "icons": { 
    "16":  "images/icon16.png",
    "32":  "images/icon16@2x.png",
    "48":  "images/icon48.png",
    "128": "images/icon128.png" 
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+D"
      }
    }
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [ {
    "js": [ "chrome.js", "patch-worker.js"],
    "matches": [ "<all_urls>" ]
  } ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "19": "images/icon19.png",
      "32": "images/icon16@2x.png",
      "38": "images/icon19@2x.png"
    },
    "default_title": "Banner Dimensions",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["dimensions.js"],
      "matches": ["http://*/*", "https://*/*" ]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}