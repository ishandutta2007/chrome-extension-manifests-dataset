{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "WebSnap - Web scrolling screenshot and editor",
  "version": "1.1",
  "description": "Quickly capture screenshots, scroll through long pages, and edit images on the fly with our easy-to-use Chrome extension.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "./dist/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./img/icon/icon16.png",
      "48": "./img/icon/icon48.png",
      "128": "./img/icon/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./dist/content.js"
      ]
    },
    {
      "js": [
        "./dist/kodepayContent.js"
      ],
      "matches": [
        "https://kodepay.io/*",
        "https://fronted.kodepay.io/*"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}