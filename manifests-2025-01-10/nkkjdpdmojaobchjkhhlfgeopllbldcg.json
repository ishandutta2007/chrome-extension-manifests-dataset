{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Furigana Toggle",
  "version": "2.0.0",
  "description": "Toggle furigana on and off.",
  "author": "Darren Lester",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "furigana-toggle.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_icon": {
      "16": "./logo_16.png",
      "48": "./logo_48.png",
      "128": "./logo_128.png"
    },
    "default_title": "Furigana Toggle"
  },

  "options_ui": {
    "page": "options.html"
  }
}
