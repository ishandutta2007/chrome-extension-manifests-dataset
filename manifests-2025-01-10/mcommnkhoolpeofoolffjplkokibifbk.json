{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "ColorXtra",
  "version": "1.0",
  "description": "A color picker extension that helps you pick colors from any webpage",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/images/*.png", "popup.html"],
    "matches": ["<all_urls>"]
  }]
}
