{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Store Detector - Shopify Analysis & Dropship Tool",
  "description": "Quickly analyze Shopify stores for themes, apps, and product insights to optimize your dropshipping or e-commerce strategy.",
  "version": "2.0.52",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
