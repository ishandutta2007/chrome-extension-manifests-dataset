    "default_title": "Open Sidebar"
  },
  "icons": {
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": [
        "apps.js",
        "contentScript.js",
        "regions.js",
        "categories.js",
        "conversion_categories.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["<all_urls>", "*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
