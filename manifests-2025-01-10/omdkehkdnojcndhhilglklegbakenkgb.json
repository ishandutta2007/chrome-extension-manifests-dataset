  "permissions": [
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16x16.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    },
    "default_title": "BestHomepageEver"
  },
  "chrome_settings_overrides": {
    "homepage": "https://besthomepageever.com"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "js/background.js"
  }
