  "web_accessible_resources": [
    {
      "resources": [],
      "matches": [
        "*://github.com/*",
        "*://viewscreen.githubusercontent.com/*"
      ]
    }
  ],
  "host_permissions": [
    "*://github.com/*",
    "*://viewscreen.githubusercontent.com/*"
