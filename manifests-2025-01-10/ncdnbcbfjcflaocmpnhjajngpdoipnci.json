      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Adstxter",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
        "32": "images/32.png"
        }
    },
    "content_security_policy": "default-src 'self'; connect-src http://*/ads.txt https://*/ads.txt https://publicsuffix.org/list/public_suffix_list.dat"
