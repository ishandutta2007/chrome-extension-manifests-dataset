"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "One-Click Image Saver",
  "version": "0.1",
  "description": "A browser extension to save images with one click.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "contextMenus"
