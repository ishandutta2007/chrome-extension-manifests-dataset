{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Accessibility Schema Validation by People & Code",
  "version": "0.0.0.3",
  "permissions": ["activeTab", "sidePanel", "scripting"],
  "incognito": "split",
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "content-scripts/utils.js",
        "content-scripts/treeBuilder.js",
        "content-scripts/validator-rules-config.js",
        "content-scripts/validator-core.js",
        "content-scripts/content-script.js"
      ]
    }
  ],
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel/side-panel.html"
  }
}
