  },
  "host_permissions": [
    "https://id.twitch.tv/oauth2/*",
    "https://api.twitch.tv/helix/*"
  ],
  "permissions": [
    "identity",
    "notifications",
    "alarms",
    "storage",
    "idle"
  ]
