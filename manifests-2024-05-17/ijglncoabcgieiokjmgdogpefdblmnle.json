    "optional_permissions": [
        "background"
    ],
    "browser_action": {
        "default_popup": "inbox.html",
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        }
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon.png"
    },
    "permissions": [
        "https://api.stackexchange.com/*",
        "notifications",
