{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "微博扩展",
    "description": "微博扩展插件 - 支持一键拉黑点赞",
    "version": "1.10",
    "permissions": ["scripting"],
    "host_permissions": ["https://weibo.com/*", "https://*.weibo.com/*"],
