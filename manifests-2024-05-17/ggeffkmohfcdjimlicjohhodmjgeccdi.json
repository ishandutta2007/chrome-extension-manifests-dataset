{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Password Lock for WhatsApp™ Web",
  "description": "Automatically lock WhatsApp Web after a period of time or by pressing the action button",
  "version": "0.1.3",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "alarms",
    "idle"
