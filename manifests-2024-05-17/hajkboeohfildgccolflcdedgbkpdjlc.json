    {
      "matches": ["*://itunes.apple.com/*"],
      "run_at": "document_end",
      "css": ["fontello.css","itunes.css"]
    },
    {
      "matches": ["*://www.theverge.com/*"],
      "run_at": "document_end",
      "css": ["verge.css"]
    },
    {
      "matches": ["*://*.appleinsider.com/*"],
      "run_at": "document_end",
      "css": ["appleinsider.css"]
