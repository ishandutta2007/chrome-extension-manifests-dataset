  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
    "<all_urls>"
      ],
      "js": ["content.js", "offscreen.js", "script.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "*://localhost/*",
    "*://127.0.0.1/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["sticky-button.html", "offscreen.html", "styles.css", "‘html2canvas.min.js’"],
      "matches": ["<all_urls>"]
    }
  ]
