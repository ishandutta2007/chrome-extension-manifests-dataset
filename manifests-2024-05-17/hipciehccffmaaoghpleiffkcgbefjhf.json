  "manifest_version": 3,
  "name": "Siri for the Browser (BrowserGPT)",
  "version": "1.1.6",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webRequest",
    "storage",
    "offscreen",
