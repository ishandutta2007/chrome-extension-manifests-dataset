        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "js/jquery.js",
                "js/find-and-replace-text.js",
                "js/functions.js",
                "js/search-time.js",
                "js/toggleIcon.js",
                "js/timezones.js"
            ],
            "css": [
                "css/search-time.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "css/fonts/Inter/*.woff"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
