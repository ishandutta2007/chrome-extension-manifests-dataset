  "16": "images/icon16.png",
  "48": "images/icon48.png",
  "128": "images/icon128.png"
 },
 "web_accessible_resources": [{
    "resources": [
   "src/injected.js",
   "images/icon48.png"
  ],
        "matches": ["<all_urls>"]
 }],
 "permissions": [
  "storage"
 ],
 "host_permissions": [
  "https://*/",
  "http://*/"
 ],
