  "name": "Hakka Extension",
  "description": "The Hakka Shopify chrome extension lets you quickly create orders from anywhere.",
  "version": "1.0.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "commands",
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "",
    "default_title": "Open the popup"
  },
  "commands": {
    "run-toggle": {
      "suggested_key": {
        "default": "Shift+Ctrl+U",
        "mac": "Shift+Command+U"
      },
      "description": "Run \"foo\" on the current page."
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "draggable.js",
        "content.js"
      ],
      "css": [
        "draggable.css",
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.*"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "hakkalogo16.png",
