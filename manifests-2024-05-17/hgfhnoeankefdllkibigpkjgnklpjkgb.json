  "name": "YouTube Comment Mover",
  "version": "1.0.1",
  "description": "Moves the comments section on YouTube videos to the right sidebar.",
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "css": ["style/style.css"],
      "js": ["content_script/content_script.js"]
    }
