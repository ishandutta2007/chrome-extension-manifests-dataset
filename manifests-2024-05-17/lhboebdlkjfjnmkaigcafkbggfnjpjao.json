"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "EasyUseWikidot",
    "version": "1.3.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.wikidot.com/*",
                "*://*.wdfiles.com/local--files/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ]
