{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Twitch Friendly",
    "version": "1.4",
    "default_locale": "en",
    "description": "Twitch Friendly introduces an extension to enhance your Twitch experience.",
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "icons": {
        "16": "icons/icon16x.png",
        "32": "icons/icon32x.png",
        "48": "icons/icon48x.png",
        "128": "icons/icon128x.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16x.png",
            "32": "icons/icon32x.png",
            "48": "icons/icon48x.png",
            "128": "icons/icon128x.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "content.js",
                "report.js",
                "popup.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*.twitch.tv/*",
        "https://www.twitch.tv/*",
        "https://www.libreplay.fr/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "pages/report.html",
                "pages/how-to.html"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "*://*.twitch.tv/*"
        ]
    }
}