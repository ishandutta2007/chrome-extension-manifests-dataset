{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Pinterest Love: Pinterest Screenshot Saver++",
  "short_name": "Pinterest Love",
  "version": "1.45",
  "description": "Save screenshots and other images to Pinterest, visually search pins and list pinnable images on a page.",
  "homepage_url": "https://twitter.com/vitaminiser",
  "author": "@vitaminiser",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "cookies",
    "scripting"
  ],
  "commands": {
    "PinScreenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Pin screenshot"
    },
    "QuickScreenshot": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Pin quick screenshot"
    },
    "LaunchGrid": {
      "suggested_key": {
        "windows": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "List images on a current page"
    },
    "Bookmark": {
      "suggested_key": {
        "windows": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Bookmark this page"
    }
  },
  "host_permissions": ["<all_urls>","*://*/*", "*://*.pinterest.com/"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": { "16": "icons/icon16x16.png", "24": "icons/icon24x24.png" }
  },
  "options_page": "options/options.html",
  "icons": {
    "128": "icons/icon128x128.png",
    "16": "icons/icon16x16.png",
    "48": "icons/icon48x48.png",
    "32": "icons/icon32x32.png",
    "24": "icons/icon24x24.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["common.js", "libs/dom.js", "libs/onyx.js", "localisation.js", "page/hoverbutton.js", "page/page.js", "page/messages.js"],
      "css": ["page/page.css", "page/hoverbutton.css"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["page/inject.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "css/darkmode.css",
        "options/news.json",
        "options/options.html",
        "create/create2.html",
        "grid/grid.html",
        "search/search.html",
        "screenshotTab/screenshotTab.html",
        "darkmode/pinterest.css"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "manifest_version": 3
