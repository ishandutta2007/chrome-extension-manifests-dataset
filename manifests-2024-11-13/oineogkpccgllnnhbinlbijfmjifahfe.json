{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Zen Tweets",
    "version": "1.4",
    "description": "Hides tweets about specific topics from your X/Twitter timeline using a powerful AI filter.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://twitter.cercaapp.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "lib/google-ai.js",
                "storage.js",
                "util.js",
                "cache.js",
                "ai.js",
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "settings.html",
        "default_icon": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}