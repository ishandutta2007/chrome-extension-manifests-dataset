  "content_scripts": [
    {
      "exclude_matches": ["https://*.google.com/*", "https://*.facebook.com/*"],
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/jquery.min.js", "js/shopify_analyzer.js", "js/content.js"],
      "run_at": "document_end"
    }
  ]
