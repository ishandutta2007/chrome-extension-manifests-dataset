{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Wave: Save Money, Win Prizes",
  "version": "1.0.4",
  "description": "Save money and win prizes when you shop online.",
  "action": {
    "default_popup": "./src/scripts/popup/popup.html"
  },
  "options_ui": {
    "page": "./src/scripts/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-32.png",
    "128": "./assets/icon-32.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "cookies",
    "notifications",
    "background",
    "webRequest",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "./js/browser-polyfill.min.js",
        "./js/content.js"
      ],
      "type": "module"
    }
  ],
  "commands": {
    "refresh_extension": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Refresh Extension"
    }
  },
  "externally_connectable": {
    "matches": [
      "https://app.joinwave.com/*",
      "https://app-stage.prizedraw.com/*",
      "http://localhost:3000/*"
    ]
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "resources": [
        "dist/js/index.js",
        "dist/js/options.js",
        "dist/js/popup.js",
        "dist/js/service-worker.js",
        "dist/js/shoppay.js"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "js/shoppay.js"
      ],
      "type": "module"
    },
    {
      "resources": [
        "img/*",
        "fonts/*"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}