{
    "name": "Reddit Tool Plus",
    "version": "1.0.1",
    "description": "Enhance your Reddit experience with bulk delete, auto-folding comments, image viewing, and more.",
    "manifest_version": 3,
    "default_locale": "en",
    "minimum_chrome_version": "96",
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "declarativeNetRequest"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "host_permissions": [
        "*://*.reddit.com/*",
        "*://i.redd.it/*",
        "*://preview.redd.it/*",
        "*://external-preview.redd.it/*",
        "*://www.reddit.com/media*"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "icons/*",
                "images/*",
                "fonts/*"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.reddit.com/*"
            ],
            "js": [
                "js/all.js",
                "js/main.js"
            ],
            "css": [
                "css/main.css",
                "css/all.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/extension-icon-x16.png",
            "32": "icons/extension-icon-x32.png",
            "48": "icons/extension-icon-x48.png",
            "128": "icons/extension-icon-x128.png"
        }
    },
    "icons": {
        "16": "icons/extension-icon-x16.png",
        "32": "icons/extension-icon-x32.png",
        "48": "icons/extension-icon-x48.png",
        "128": "icons/extension-icon-x128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "redditimgrules",
                "enabled": true,
                "path": "static/rules.json"
            }
        ]
    },
    "update_url": "https://clients2.google.com/service/update2/crx"
}