{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "default_locale": "en",
  "name": "Hermes Warm Intros Extension",
  "version": "0.0.2",
  "description": "An extension to streamline warm intros from the Hermes app",
  "host_permissions": [
    "https://www.linkedin.com/in/*"
  ],
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "options_page": "options/index.html",
  "background": {
    "service_worker": "background.iife.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "hermes-logo.png"
  },
  "icons": {
    "128": "hermes-logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content/index.iife.js"
      ]
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content-ui/index.iife.js"
      ]
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "*.svg",
        "hermes-logo.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "side-panel/index.html"
  }
}