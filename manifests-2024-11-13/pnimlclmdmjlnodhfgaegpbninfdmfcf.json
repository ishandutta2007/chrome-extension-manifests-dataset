     "matches": ["https://*.twitcasting.tv/*/broadcaster",
     "https://*.twitcasting.tv/*/broadcastertool"],
     "css": ["tcas.css"],
     "js": ["akaji.js", "contentScript.js"]
   }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon":  {
      "16" : "akaji_16.png",
