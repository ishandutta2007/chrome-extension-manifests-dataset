{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Lexicon Focus Reader",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Read all of your news articles in a clean environment",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.theatlantic.com/*",
        "https://www.nbcnews.com/news/*",
        "https://www.latimes.com/*/story/*",
        "https://www.cnn.com/*",
        "https://www.nytimes.com/*",
        "https://www.vox.com/*",
        "https://www.cbsnews.com/news/*",
        "https://www.wsj.com/*",
        "https://newyorker.com/*",
        "https://wired.com/*",
        "https://*.reuters.com/*"
      ],
      "js": ["content_script.bundle.js"],
      "css": ["styles/main.css", "styles/fonts.css"]
    }
  ],
  "web_accessible_resources": [
    "content_script.bundle.js",
    "styles/main.css",
    "styles/fonts.css",
    "images/arrow-left.svg",
    "images/sliders.svg",
    "images/underline.svg",
    "images/minus-circle.svg",
    "images/plus-circle.svg",
    "images/book.svg",
    "images/upload.svg"
  ],
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Lexicon Focus Reader"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
