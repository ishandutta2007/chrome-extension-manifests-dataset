{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "TestCart Recorder",
    "version": "1",
    "description": "Chrome Extension to Record Tests for Shopify Test Cart Recorder: Automated Test Alerts",

    "permissions": [
      "storage",
      "scripting",
      "declarativeNetRequest"
    ],
    "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "match_about_blank": false,
          "all_frames": false,
          "js": [
              "handler.js"
          ],
          "run_at": "document_end"
      }
    ],

    "declarative_net_request": {
      "rule_resources": [
          {
              "id": "ruleset_1",
              "enabled": true,
              "path": "rules.json"
          }
      ]
    },

    "host_permissions": [
      "https://*/*"
    ],
    
    "background": {
      "service_worker": "worker.js"
    },

    "action": {
      "default_popup": "index.html",
      "default_icon": "assets/test-cart-logo-128.png"
    },

    "icons": {
      "16": "./assets/test-cart-logo-16.png",
      "48": "./assets/test-cart-logo-48.png",
      "128": "./assets/test-cart-logo-128.png"
    },

    "web_accessible_resources": [
      {
          "resources": [
              "recording-notifier.html"
          ],
          "matches": [
              "<all_urls>"
          ]
      }
    ]
  

  }
  