    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Alt+S",
        "mac": "Shift+Command+S"
      },
      "description": "Open the extension"
    }
  },
  "background": {
    "service_worker": "javascripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["javascripts/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "javascripts/*", 
        "components/*",
        "html/*", 
        "styles/*",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
