"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.2.6",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/icon128.png"
  },

