      "run_at": "document_end",
      "js": [
        "polyfills/browser-polyfill.js",
        "inject-content/inject.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "inject-content/inject.html",
    "inject-content/cleanslate.css"
  ]
