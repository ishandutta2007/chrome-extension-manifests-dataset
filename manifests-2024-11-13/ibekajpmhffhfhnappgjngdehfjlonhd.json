"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "TL;DR - Webpage Summarizer",
  "version": "4.0",
  "description": "Summarizes webpages",
  "permissions": [
    "activeTab",
    "tabs",
