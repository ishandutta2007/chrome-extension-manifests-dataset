  "devtools_page": "html/devtool.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/cc-devtool-contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/cc-devtool-backgroundScript.js"
    ]
  },
  "web_accessible_resources": [
    "*/*",
    "*"
  ],
  "permissions": [
    "tabs",
    "storage",
    "nativeMessaging",
    "webNavigation",

    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval';  object-src 'self'"
