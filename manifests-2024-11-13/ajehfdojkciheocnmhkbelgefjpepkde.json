{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Bella Browser Extension",
  "description": "Browser Extension for bellasales.io (in developement)",
  "version": "0.9",
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "background",
    "webRequest",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "*://*.bellasales.io/*",
    "*://localhost/*",
    "*://*.linkedin.com/*",
    "*://www.google.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.bellasales.io/*",
      "*://localhost/*",
      "*://*.linkedin.com/*",
      "*://www.google.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}