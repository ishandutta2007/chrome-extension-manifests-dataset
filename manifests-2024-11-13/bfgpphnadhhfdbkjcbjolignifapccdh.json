{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "ZapSearch ⚡️",
    "description": "Spotlight Search for Chrome. The ⚡️ Blazing fast ⚡️ search for Bookmarks, History and Special commands.",
    "version": "0.2.0",
    "permissions": [
      "bookmarks",
      "tabs",
      "storage",
      "history"
    ],
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/content.js", "lib/options.js"],
        "css": ["content.css"]
      }
    ],
    "background": {
      "service_worker": "lib/background.js"
    },
    "commands": {
      "launch-spotlight": {
        "suggested_key": {
          "windows": "Ctrl+Shift+L",
          "linux": "Ctrl+Shift+L",
          "chromeos": "Ctrl+Shift+L",
          "mac": "Command+Shift+L"
        },
        "description": "Hot-key to Trigger ZapSearchBar"
      }
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": { 
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
     "128": "icons/icon_128.png" 
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/*", "*.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }