"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Accessibility Highlighter",
  "version": "1.6",
  "description": "Highlights screen reader accessibility issues on websites, with a toggle feature.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Show/Hide Screen Reader Accessibility Issues"
  },
  "icons": {
    "128": "icon128.png"
  }
}