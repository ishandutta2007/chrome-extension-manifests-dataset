  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
      "service_worker": "/js/background.js"
   },
   "commands": {
      "activate": {
         "description": "Activate picking color from web page",
         "suggested_key": {
            "default": "Alt+P"
         }
      }
   }
