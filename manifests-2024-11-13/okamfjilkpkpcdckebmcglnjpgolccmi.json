{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Shortcuts for Shopify",
  "version": "1.0.2",
  "description": "Provides keyboard shortcuts for Shopify stores to copy preview links, open theme editor and open admin",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "notifications",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon":"images/icon-disabled48.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "commands": {
    "copy-preview-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Ctrl+Shift+Q"
      },
      "description": "Copy preview link"
    },
    "open-theme-editor": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Ctrl+Shift+E"
      },
      "description": "Open theme editor"
    },
    "open-admin": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Ctrl+Shift+A"
      },
      "description": "Open admin"
    },
    "toggle-section-highlighter": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle section highlighter"
    }
  }
}
