  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "content-script/mark.min.js",
        "content-script/mutations.js",
        "content-script/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "icons/logo.png",
    "default_popup": "popup/popup.html"
  },
