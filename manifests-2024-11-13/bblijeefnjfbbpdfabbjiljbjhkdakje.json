{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "ChatGPT Translator for Messages",
  "description":"Use this extension to write messages in one language and then quickly translate them to another language using ChatGPT.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/AI.png",
      "48": "./icons/AI.png",
      "128": "./icons/AI.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "./icons/AI.png",
    "48": "./icons/AI.png",
    "128": "./icons/AI.png"
  },
  "web_accessible_resources":[{
    "resources":["icons/*"],
    "matches":["<all_urls>"]
  }]
}
