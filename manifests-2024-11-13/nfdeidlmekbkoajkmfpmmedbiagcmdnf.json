    "manifest_version": 3,
    "name": "Distract Less Chess",
  
    "version": "3.0",
    "description": "Hide player names, avatars, and other distracting elements on Chess.com.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
  
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggleExtension": {
            "suggested_key": {
                "default": "Alt+H"
            },
            "description": "Toggle hiding distractions on Chess.com"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.chess.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "32":"icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
