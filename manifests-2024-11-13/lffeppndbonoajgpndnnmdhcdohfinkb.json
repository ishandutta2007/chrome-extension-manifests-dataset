{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "FiniteScroll - Limit infinite scrolling on social media",
  "description": "Limits infinite scroll feature of social media websites",
  "permissions": ["storage"],
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "run_at": "document_start",
      "js": ["finitescroll-fb-feed.js", "finitescroll-fb-reels.js"],
      "type": "module"
    },
    {
      "matches": ["*://*.tiktok.com/*"],
      "run_at": "document_start",
      "js": ["finitescroll-tiktok.js"],
      "type": "module"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
