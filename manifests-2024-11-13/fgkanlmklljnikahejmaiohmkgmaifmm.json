    "64":  "app/icon/icon_64.png",
    "128": "app/icon/icon_128.png",
    "256": "app/icon/icon_256.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardWrite"
