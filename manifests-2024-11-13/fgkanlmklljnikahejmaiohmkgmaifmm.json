    {
      "matches": ["*://*/*"],
      "js": ["app/js/_content_loaded.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*/*"],
      "js": ["app/js/_content_ready.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": ["/app/res/*", "/app/css/*", "/app/lib/css/*", "/app/lib/fonts/*"]
