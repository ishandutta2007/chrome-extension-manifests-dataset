  "manifest_version": 3,
  "name": "Simplify YouTube",
  "description": "Hide features you don't use",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "js": ["content.bundle.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
