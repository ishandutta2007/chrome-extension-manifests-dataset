        "scripts/pageformatter.js",
        "scripts/translations.js",
        "scripts/idealogs.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["aside.html", "images/icon48.png", "css/idl-content.css", "css/aside.css"],
      "matches": ["<all_urls>"]
