{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "ChatGPT: Copy Code Without Scrolling",
  "version": "1.0",
  "description": "Tired of scrolling up to 'Copy code' on ChatGPT? This extension adds a second button below code blocks for easy copying!",
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["second_copy_code.js"],
      "run_at": "document_end"
    }
  ]
