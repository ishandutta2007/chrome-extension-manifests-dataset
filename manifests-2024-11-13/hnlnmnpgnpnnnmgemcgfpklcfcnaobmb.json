{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Autosave – for Hubspot",
  "description": "Automatically save on Hubspot!",
  "version": "0.0.12",
  "action": {
    "default_icon": "public/icon-16.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "public/icon-16.png",
    "32": "public/icon-32.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "unlimitedStorage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.hubspot.com/*",
    "https://*.lemonsqueezy.com/*",
    "http://localhost/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": false
    }
  ],
  "content_scripts": [
    {
      "js": [
        "src/content/recordsWorker.ts-loader.js"
      ],
      "matches": [
        "https://*.hubspot.com/*"
      ],
      "runAt": "document_start"
    },
    {
      "matches": [
        "https://sbsoftware.lemonsqueezy.com/*"
      ],
      "js": [
        "src/content/listenToPayment.ts-loader.js"
      ],
      "runAt": "document_start"
    },
    {
      "matches": [
        "https://autosave-pyok7o.sliplane.app/*",
        "http://localhost/*"
      ],
      "js": [
        "src/content/listenToLogin.ts-loader.js"
      ],
      "runAt": "document_start"
    }
  ]
}
