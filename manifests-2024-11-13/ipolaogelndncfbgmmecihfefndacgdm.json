{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Uni Stuttgart Login Redirect",
  "description": "Automatically redirects to the login page in Ilias and Campus",
  "author": "escape99",
  "version": "1.5",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": [
    "https://ilias3.uni-stuttgart.de/**",
    "https://campus.uni-stuttgart.de/**"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ilias3.uni-stuttgart.de/ilias.php?baseClass=ilrepositorygui**"
      ],
      "js": [
        "iliasRedirect.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://campus.uni-stuttgart.de/**"
      ],
      "js": [
        "campusRedirect.js"
      ],
      "run_at": "document_end"
    }
  ]
}