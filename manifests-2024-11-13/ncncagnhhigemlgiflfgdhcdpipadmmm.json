{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Facebook™ all in one",
  "description": "__MSG_extDescription__",
  "homepage_url": "https://chromewebstore.google.com/detail/facebook-all-in-one/ncncagnhhigemlgiflfgdhcdpipadmmm",
  "version": "1.5",
  "default_locale": "en",
  "icons": {
    "16": "./assets/icon16.png",
    "32": "./assets/icon32.png",
    "48": "./assets/icon32.png",
    "128": "./assets/icon128.png"
  },
  "action": {
    "default_popup": "./scripts/popup/index.html",
    "default_icon": "./assets/icon32.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "background": {
    "service_worker": "./scripts/background/index.js",
    "type": "module"
  },
  "host_permissions": ["*://*/*", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./scripts/content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "enabled": true,
        "id": "ruleset_fb_aio",
        "path": "./rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://useful-scripts-extension.github.io/*",
      "https://facebook-all-in-one.com/*",
      "https://fb-aio.web.app/*",
      "https://fb-aio.firebaseapp.com/*",
      "http://localhost:5173/*",
      "http://127.0.0.1:5173/*",
      "http://localhost:5500/*",
      "http://127.0.0.1:5500/*"
    ]
  }
}
