  },
  "icons": {
    "48": "icons/icon-48.png",
    "72": "icons/icon-72.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png",
    "144": "icons/icon-144.png",
    "192": "icons/icon-192.png",
    "512": "icons/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
