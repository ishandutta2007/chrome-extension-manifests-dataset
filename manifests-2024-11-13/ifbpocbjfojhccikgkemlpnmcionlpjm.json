{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "HKT Apps Helper",
  "version": "1.0.4",
  "description": "Record screen, tab, and audio from Chrome browser.",
  "permissions": [
    "desktopCapture",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js",
        "dist/pinTab.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "public/images/hktapps_logo.png",
      "48": "public/images/hktapps_logo.png",
      "128": "public/images/hktapps_logo.png"
    }
  },
  "icons": {
    "16": "public/images/hktapps_logo.png",
    "48": "public/images/hktapps_logo.png",
    "128": "public/images/hktapps_logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "pinTab.html",
        "video.html",
        "list.html"
      ]
    }
  ]
}
