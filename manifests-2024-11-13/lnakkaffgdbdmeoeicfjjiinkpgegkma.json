{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Xcreen Recorder",
  "description": "Easily record and share videos.",
  "version": "1.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "tabCapture", "tabs", "storage", "scripting", "cookies"],
  "host_permissions": ["*://*/*"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/recorder.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_title": "Record screen",
    "default_popup": "popup.html"
  }
}
