  "manifest_version": 3,
  "name": "Google Scholar Author Highlighter",
  "version": "1.1",
  "description": "Highlights first-author and last-author papers on Google Scholar profile pages",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "images/icon128.png"
