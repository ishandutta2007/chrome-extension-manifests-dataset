  "permissions": [
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src ws://localhost:*/ http://localhost:*/",
