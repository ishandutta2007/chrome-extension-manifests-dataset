  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "./dist/background/index.mjs"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
