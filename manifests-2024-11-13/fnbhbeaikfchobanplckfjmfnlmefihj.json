{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Easy Font & Zoom",
  "version": "1.1",
  "description": "This extension is designed for seniors, offering zoom and magnifying features to adjust font sizes and enhance readability.",
  "permissions": [
    "webRequest",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/16icon.png",
    "48": "images/48icon.png",
    "128": "images/128icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "constants.js"
      ]
    }
  ],
  "action": {
    "default_title": "Easy Font & Zoom",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html2canvas.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
