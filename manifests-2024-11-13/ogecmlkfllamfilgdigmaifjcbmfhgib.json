{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "HotGato Speed Reader",
    "version": "1.0",
    "description": "Speed read any website or paragraph with HotGato.",
    "author": "Robert Allen of ZingLab",
    "permissions": [
      "contextMenus", 
      "activeTab", 
      "scripting", 
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "128": "hotgato_128.jpg"
      }
    },
    "icons": {
      "128": "hotgato_128.jpg"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["core.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["index.html", "style.css", "hotgato_128.jpg"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  