            "matches": [
                "https://*.teamblind.com/*",
                "https://*.repvue.com/*",
                "https://*.glassdoor.ca/*",
                "https://*.glassdoor.com/*",
                "https://*.glassdoor.com.au/*",
                "https://*.glassdoor.de/*",
                "https://*.glassdoor.fr/*",
                "https://*.glassdoor.hk/*",
                "https://*.glassdoor.nl/*",
                "https://*.glassdoor.sg/*",
                "https://*.glassdoor.co.in/*",
                "https://*.glassdoor.co.nz/*",
                "https://*.glassdoor.co.mx/*",
                "https://*.glassdoor.co.uk/*"
            ],
            "js": ["dist/removeBlockers.js"],
            "run_at": "document_start"
        }
    ]
}
