{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Scroll Preview",
    "version": "6.2",

    "description": "Scroll Preview integrates a whole-page preview with scrollbar that inspired by Sublime Text's mini map.",
    "icons": {
        "16": "icons/monocle-16.png",
        "48": "icons/monocle-48.png",
        "128": "icons/monocle-128.png"
    },

    "action": {
        "default_icon": {
            "19": "icons/monocle-19.png",
            "38": "icons/monocle-38.png"
        },
        "default_title": "Scroll Preview"
    },

    "author": "Mike Chen",

    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },

    "commands": {
        "basic-snapshot": {
            "description": "Simple",
            "suggested_key": {
                "default": "Alt+A"
            }
        },
        "refined-snapshot": {
            "description": "Refined",
            "suggested_key": {
                "default": "Alt+Shift+A"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": ["src/style.css"],
            "js": [
                "libs/jquery-shim.js",
                "libs/html2canvas.js",
                "common/user_settings.js",
                "src/content.js"
            ]
        }
    ],
    "options_page": "options/options.html",
    "permissions": [
        "activeTab",
        "storage"
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "libs/jquery-shim.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
