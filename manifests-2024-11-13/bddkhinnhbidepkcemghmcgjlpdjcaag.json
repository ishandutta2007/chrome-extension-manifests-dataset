            "matches": [
                "https://*.chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "images/mic.png",
        "48": "images/mic.png",
        "128": "images/mic.png"
    },
    "action": {
        "default_icon": {
            "16": "images/mic.png",
            "48": "images/mic.png",
            "128": "images/mic.png"
        }
    }
