  "web_accessible_resources": [
    {
      "resources": ["popup.js", "styles.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
