{
"update_url": "https://clients2.google.com/service/update2/crx",

 "manifest_version": 3,
 "name": "Webpify",
 "version": "1.0",
 "description": "Select images to directly convert to webp with all the handling done on the client side.",
 "permissions": [
  "activeTab",
  "scripting",
  "storage",
  "tabs",
  "contextMenus"
 ],
 "icons": {
  "16": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
 },
 "background": {
  "service_worker": "service-worker.js",
  "type": "module"
 },
 "content_scripts": [
  {
   "matches": ["<all_urls>"],
   "js": ["content-script.js"]
  }
 ],
 "host_permissions": [
  "<all_urls>"
 ],
 "action": {
  "default_popup": "popup.html",
  "default_icon": "icon.png"
 }
}
