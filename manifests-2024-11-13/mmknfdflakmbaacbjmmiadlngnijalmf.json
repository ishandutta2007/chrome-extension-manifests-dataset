{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Freedom Units Only",
    "version": "1.0",
    "description": "Automatically convert non-US units to freedom units (US-based) on any webpage.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
      }
    },
    "icons": {
      "48": "icon.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "exclude_matches": ["*://*.google.com/*"],
        "js": ["conversions.js", "content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icon-disabled.png", "icon.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  