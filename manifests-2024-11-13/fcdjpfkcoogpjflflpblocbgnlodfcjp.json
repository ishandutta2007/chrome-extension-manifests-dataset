{
"update_url": "https://clients2.google.com/service/update2/crx",

    "author": "def00111",
    "manifest_version": 3,
    "name": "Notifier for Yahoo Mail",
    "version": "1.3.0",
    "minimum_chrome_version": "123",
    "description": "Notifies you when new emails arrived in your Yahoo Mail box",

    "icons": {
        "16": "icons/email-16.png",
        "32": "icons/email-32.png",
        "48": "icons/email-48.png",
        "64": "icons/email-64.png",
        "128": "icons/email-128.png"
    },

    "action": {
        "default_icon": {
          "16": "icons/email-16.png",
          "32": "icons/email-32.png",
          "48": "icons/email-48.png",
          "64": "icons/email-64.png"
        },
        "default_title": "Notifier for Yahoo Mail"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },

    "background": {
        "service_worker": "sw.js"
    },

    "permissions": [
        "alarms",
        "contextMenus",
        "storage",
        "declarativeNetRequest",
        "tabs",
        "scripting",
        "webNavigation",
        "offscreen",
        "notifications",
        "webRequest",
        "cookies",
        "idle"
    ],

    "optional_permissions": [
        "background"
    ],

    "host_permissions": [
        "https://*.mail.yahoo.com/"
    ],

    "externally_connectable": {
        "matches": ["https://*.mail.yahoo.com/*"]
    },

    "web_accessible_resources": [{
        "resources": ["content.css"],
        "matches": ["https://mail.yahoo.com/*"]
    }]
