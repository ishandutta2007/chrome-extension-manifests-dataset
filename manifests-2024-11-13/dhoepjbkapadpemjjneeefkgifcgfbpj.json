      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.x.com/*"],
      "js": ["twitter_content_script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["linkedin_content_script.js"],
