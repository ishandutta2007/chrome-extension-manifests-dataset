{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Product History Price Tracker for Flipkart & Amazon",
  "version": "1.0.3",
  "description": "Price History for Flipkart & Amazon. Flipkart Price Tracker. Amazon Price Tracker. Track Flipkart & Amazon prices",
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "short_name": "ProductHistory",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "32": "assets/images/icon32.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    },
    "default_title": "Product History Price Tracker"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.myntra.com/*",
        "*://*.ajio.com/*"
      ],
      "js": [
        "libs/chart.js",
        "libs/chartjs-adapter-date-fns.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.myntra.com/*",
    "*://*.ajio.com/*",
    "https://producthistory.in/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src https://producthistory.in;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/favicon.ico",
        "assets/images/company_logo.png",
        "request_popup.html"
      ],
      "matches": [
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.myntra.com/*",
        "*://*.ajio.com/*"
      ]
    }
  ]
}
