{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Subtitle Translator",
    "version": "1.0",
    "description": "Translate and save subtitles from Netflix, Amazon, Disney+, and YouTube. Supports single-word and phrase translation.",
    "permissions": ["notifications","activeTab", "storage","windows","tabs"],
    "background": {
        "service_worker": "background/background.js"
      },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon.png"
    },
     "options_page": "options/options.html",
    "content_scripts": [
      {
        "matches": [
          "*://www.netflix.com/*",
          "*://www.primevideo.com/*",
          "*://www.disneyplus.com/*",
          "*://www.youtube.com/*"
        ],
        "js": ["lib/intro.js","content/content.js"],
        "css": ["lib/introjs.css"]

      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "popup/popup.html", 
          "popup/popup.js", 
          "popup/popup.css", 
          "vocab/vocab.html", 
          "vocab/vocab.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  