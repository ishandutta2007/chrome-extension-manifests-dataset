{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "getSparks: Manage your web content",
  "description": "Simplest way to add and manage web content using getSparks",
  "version": "3.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-to-getSparks": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Save page to getSparks"
    }
  },
  "content_scripts": [
   {
     "matches": [
       "<all_urls>"
     ],
     "js": ["jquery.js","content-script.js","sweetalert.js","Readability.js"],
     "css": ["styles.css","sweetalert.css"],
     "run_at": "document_end"
   }
 ],
  "permissions": [
    "activeTab",
    "background",
    "bookmarks",
    "cookies",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
  {
   "resources": [
    "images/*"
   ],
   "matches": [
    "<all_urls>"
   ]
  }
  ],
  "action": {
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
