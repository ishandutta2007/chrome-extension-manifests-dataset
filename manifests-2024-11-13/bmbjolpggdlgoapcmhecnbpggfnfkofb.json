  "description": "Focus on the video you are watching",
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
