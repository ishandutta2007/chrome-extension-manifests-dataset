    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "light-icon.png",
        "/images/active-focus.png",
        "/html/notes.html"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
